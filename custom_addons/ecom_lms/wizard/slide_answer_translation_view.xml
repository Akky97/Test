<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id ="slide_ans_title_translation_wiz_form_view" model="ir.ui.view">
            <field name="name">Translate Slide Answer</field>
            <field name="model">slide.answer.title.translation</field>
            <field name="arch" type="xml">
                <form string="Translate Slide Answer">
                    <notebook>
                            <page string="Translate Answer" >
                                <field name="slide_ans_lang_translation_ids" >
                                    <tree editable="bottom">
                                        <field name="language_id"/>
                                        <field name="translation_value"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    <footer>
                        <button name="translate_done" string="OK"  class="oe_highlight" type="object"/> 
					    <button string="Cancel" special="cancel"/>
				    </footer>
                </form>
            </field>
        </record>

        <record id="action_slide_ans_title_translation_wiz" model="ir.actions.act_window">
            <field name="name">Translate Slide Answer</field>
            <field name="res_model">slide.answer.title.translation</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        
        
        
        
        
        
        
        
        <record id ="slide_ans_comment_translation_wiz_form_view" model="ir.ui.view">
            <field name="name">Translate Slide Answer Comment</field>
            <field name="model">slide.answer.comment.translation</field>
            <field name="arch" type="xml">
                <form string="Translate Slide Answer Comment">
                    <notebook>
                            <page string="Translate Answer Comment" >
                                <field name="slide_ans_comment_lang_translation_ids" >
                                    <tree editable="bottom">
                                        <field name="language_id"/>
                                        <field name="translation_value"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    <footer>
                        <button name="translate_done" string="OK"  class="oe_highlight" type="object"/> 
					    <button string="Cancel" special="cancel"/>
				    </footer>
                </form>
            </field>
        </record>

        <record id="action_slide_ans_comment_translation_wiz" model="ir.actions.act_window">
            <field name="name">Translate Slide Answer Comment</field>
            <field name="res_model">slide.answer.comment.translation</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>
