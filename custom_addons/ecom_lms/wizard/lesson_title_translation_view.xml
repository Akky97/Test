<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id ="lesson_title_translation_wiz_form_view" model="ir.ui.view">
            <field name="name">Translate Lesson</field>
            <field name="model">lesson.title.translation</field>
            <field name="arch" type="xml">
                <form string="Translate Lesson">
                    <notebook>
                            <page string="Translate Lesson" >
                                <field name="lesson_lang_translation_ids" >
                                    <tree editable="bottom">
                                        <field name="language_id"/>
                                        <field name="translation_val"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    <footer>
                        <button name="translate_done" string="OK"  class="oe_highlight" type="object"/> 
					    <button string="Cancel" special="cancel"/>
				    </footer>
                </form>
            </field>
        </record>

        <record id="action_lesson_title_translation_wiz" model="ir.actions.act_window">
            <field name="name">Translate Lesson</field>
            <field name="res_model">lesson.title.translation</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>
