<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="lesson_invite_view_form">
            <field name="name">lesson.invite.form</field>
            <field name="model">lesson.invite</field>
            <field name="arch" type="xml">
                <form string="Compose Email">
                    <group col="1">
                        <group col="2">
                            <field name="lesson_id" readonly="context.get('default_lesson_id')"/>
                            <field name="user_ids" widget="many2many_tags"/>
                            <field name="lesson_start_url" label="Public share URL" readonly="1" widget="CopyClipboardChar"
                                 class="mb16"/>
                        </group>
                        <div col="2" class="alert alert-warning" role="alert"
                            >
                        </div>
                        <group col="2">
                            <field name="subject" placeholder="Subject..."/>
                        </group>
                        <field name="body" options="{'style-inline': true}"/>
                        <group>
                            <group>
                                <field name="template_id" readonly="1" label="Use template"/>
                            </group>
                        </group>
                    </group>
                    <footer>
                        <button string="Send" name="action_invite" type="object" class="btn-primary"/> 
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
