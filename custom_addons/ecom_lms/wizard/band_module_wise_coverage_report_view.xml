<odoo>
    <data>
        <record id="band_module_wise_report_form_view" model="ir.ui.view">
            <field name="name">band.module.wise.coverage.report.form</field>
            <field name="model">band.module.wise.coverage.report</field>
            <field name="arch" type="xml">
                <form string="Band and Module Wise Coverage">
                <group>
                	<group >
                		<field name="course_journey" required="1" widget="radio"/>
                		<field name="region" required="1"/>
                		<field name="band"/>
                        <field name="course_ids" widget="many2many_tags" attrs="{'invisible': [('course_journey', '=','journey')]}" options="{'no_quick_create': True, 'no_create_edit' : True}"/> 
                        <field name="journey_ids" widget="many2many_tags" attrs="{'invisible': [('course_journey', '=','course')]}" options="{'no_quick_create': True, 'no_create_edit' : True}"/> 
                    </group>
                </group>
                     <footer>
                         <button name="button_print" string="Print" type="object" class="oe_highlight" />
                         <button string="Cancel" class="oe_link" special="cancel" /> 
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_band_module_wise_report_print" model="ir.actions.act_window">
            <field name="name">Band and Module Wise Coverage</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">band.module.wise.coverage.report</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        
        
       <record id="band_module_wise_report_view" model="ir.ui.view">
			<field name="name">Band and Module Wise Coverage Report</field>
			<field name="model">band.module.wise.coverage.view.report</field>
			<field name="arch" type="xml">
				<form string="Excel Report file" create="false" edit="false" duplicate="false" delete="false">
                    <group>
                        <field name="excel_file" readonly="1" filename="file_name" />
                        <field name="file_name" invisible="1" />
				    </group>
				</form>
			</field>
		</record> 
		
		<menuitem id="band_module_wise_report_view_menu" name="Band and Module Wise Coverage" parent="website_slides.website_slides_menu_report" action="action_band_module_wise_report_print" sequence="2"/>
    </data>
</odoo>