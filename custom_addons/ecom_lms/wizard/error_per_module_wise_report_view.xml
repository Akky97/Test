<odoo>
    <data>
        <record id="error_per_module_wise_report_form_view" model="ir.ui.view">
            <field name="name">error.per.module.wise.report.form</field>
            <field name="model">error.per.module.wise.report</field>
            <field name="arch" type="xml">
                <form string="Errors Per module Wise Report">
                <group>
                	<group >
                        <!-- <field name="user_ids" widget="many2many_tags"/> -->
                        <field name="region" required="1"/>
                    </group>
                </group>
                     <footer>
                         <button name="button_print" string="Print" type="object" class="oe_highlight" />
                         <button string="Cancel" class="oe_link" special="cancel" /> 
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_error_per_module_wise_report_print" model="ir.actions.act_window">
            <field name="name">Errors Per module Wise Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">error.per.module.wise.report</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        
        
       <record id="error_per_module_wise_view_report_id" model="ir.ui.view">
			<field name="name">Errors Per module Wise Report</field>
			<field name="model">error.per.module.wise.view.report</field>
			<field name="arch" type="xml">
				<form string="Excel Report file" create="false" edit="false" duplicate="false" delete="false">
                    <group>
                        <field name="excel_file" readonly="1" filename="file_name" />
                        <field name="file_name" invisible="1" />
				    </group>
				</form>
			</field>
		</record> 
		
		<menuitem id="action_error_per_module_wise_report_print_menu" name="Errors Per module Wise Report" parent="website_slides.website_slides_menu_report" action="action_error_per_module_wise_report_print" sequence="4"/>
    </data>
</odoo>