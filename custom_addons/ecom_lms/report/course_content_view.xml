<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<template id="course_content_template">
			<t t-call="web.html_container">
				<t t-foreach="docs" t-as="doc">
					<t t-call="web.external_layout">
					<div class="page">
						<h1 style="text-align:center;"><span t-field="doc.name" /></h1>
							<table class="table table-bordered">
								<thead>
									<tr style="text-align:center;">
										<th scope="col"><span>Open Date</span></th>
										<th scope="col"><span>Close Date</span></th>
										<t t-if="doc.lang_values">
											<th scope="col"><span>Language</span></th>
										</t>
									</tr>
								</thead>
								<tbody>
									<tr>
										<td><span t-field="doc.course_open_date" /></td>
										<td><span t-field="doc.course_close_date" /></td>
										<t t-if="doc.lang_values">
										<td><span t-field="doc.lang_values" /></td>
										</t>
									</tr>
								</tbody>
							</table>
							<br/>
<!-- ********************************************* Table Three For Options ******************************************************************* -->
							<h3>Options</h3>
							<table class="table table-bordered">
								<thead>
									<tr style="text-align:center;">
										<th scope="col">
											<b>
												<span>Course </span>
											</b>
										</th>
										<th scope="col">
											<b>
												<span>Course Categories</span>
											</b>
										</th>
										<th scope="col">
											<b>
												<span>Communication</span>
											</b>
										</th>
										<th scope="col">
											<b>
												<span>Group Visibility</span>
											</b>
										</th>
									</tr>
									</thead>
									<tbody>
										<tr>
											<td>
												<b>
													<span>Type:-</span>
												</b>
													<span t-field="doc.channel_type" />
												<br/>
												<b>
													<span>Allow Revision:-</span>
												</b>
													<span t-field="doc.is_revision" />
												<br/>
												<b>
													<span>Course Revision:-</span>
												</b>
													<span t-field="doc.revision_message" />
												<br/>
												<b>
													<span>Required Course:-</span>
												</b>
													<t t-foreach="doc.required_course" t-as="course">
														<span t-field="course.name"/>
													</t>
												<br/>
												<b>
													<span>Duration:-</span>
												</b>
													<span t-field="doc.course_duration" t-options='{"widget": "float_time"}'/>
												<br/>
												<b>
													<span>Course Availability:-</span>
												</b>
													<span t-field="doc.availability_option" />
												<br/>
												<b>
													<span>Website:-</span>
												</b>
													<span t-field="doc.website_id.name" />
												<br/>
												<b>
													<span>Featured:-</span>
												</b>
													<span t-field="doc.is_featured" />
												<br/>
												<t t-if="doc.journey_name_ids">
													<b>
														<span>Journey:-</span>
													</b>
													<t t-foreach="doc.journey_name_ids" t-as="journey">
														<span t-field="journey.name"/><br><span> ,</span></br>
													</t>
												</t>
											</td>
											<td>
												<b>
													<span>Category:-</span>
												</b>
													<span t-field="doc.course_category_id.name"/>
												<br/>
											</td>
											<td>
												<b>
													<span>Allow Rating:-</span>
												</b>
													<span t-field="doc.allow_comment"/>
												<br/>
												<b>
													<span>New Content Email:-</span>
												</b>
													<span t-field="doc.publish_template_id.name" />
												<br/>
												<b>
													<span>Share Template:-</span>
												</b>
													<span t-field="doc.share_template_id.name" />

											</td>
											<t t-if="doc.custom_visibility">
												<td>
													<b>
														<span>Choose:-</span>
													</b>
														<span t-field="doc.custom_visibility" />
												</td>
											</t>
										</tr>
								</tbody>
							</table>
							<br/><br/>
<!-- ********************************************* Table Four For Karma  ******************************************************************* -->
							<t t-if="doc.karma_gen_channel_rank">
								<t t-if="doc.karma_review">
									<t t-if="doc.karma_gen_channel_finish">
										<t t-if="doc.karma_slide_comment">
											<h3>Karma</h3>
											<table class="table table-bordered">
												<thead>
													<tr style="text-align:center;">
														<th scope="col">
															<b>
																<span>Rewards</span>
															</b>
														</th>
														<th scope="col">
															<b>
																<span>Access Rights</span>
															</b>
														</th>
													</tr>
												</thead>
												<tbody>
													<tr>
														<td>
															<b>
																<span>Review Course:-</span>
															</b>
																<span t-field="doc.karma_gen_channel_rank"/>
														</td>
														<td>
															<b>
																<span>Add Review:-</span>
															</b>
																<span t-field="doc.karma_review"/>
														</td>
													</tr>
													<tr>
														<td>
															<b>
																<span>Finish Course:- </span>
															</b>
																<span t-field="doc.karma_gen_channel_finish"/>
														</td>
														<td>
															<b>
																<span>Add Comment:-</span>
															</b>
																<span t-field="doc.karma_slide_comment"/>
														</td>
													</tr>
													<tr>
														<td>

														</td>
														<td>
															<b>
																<span>Vote:-</span>
															</b>
																<span t-field="doc.karma_slide_vote"/>
														</td>
													</tr>
												</tbody>
											</table>
											<br/>
										</t>
									</t>
								</t>
							</t>
						<br/>
						<p style="page-break-before:always;"> </p>
<!-- ********************************************* Table two For Description ******************************************************************* -->
						<t t-if="doc.custom_html_description != '&lt;p&gt;&lt;br&gt;&lt;/p&gt;'">
							<h3>Course Description</h3>
							<table class="table table-bordered">
								<tbody>
									<tr>
										<td>
											<span t-field="doc.custom_html_description" />
										</td>
									</tr>
								</tbody>
							</table>
							<br/><br/>
						</t>
<!-- ********************************************* Table one For Content ******************************************************************* -->
							<t t-if="doc.slide_ids">
								<h3>Content</h3>
								<table class="table table-bordered" style="height:150%">
									<tr>
										<tr style="text-align:center;">
											<th scope="col">Document</th>
											<th scope="col">Configure Lesson</th>
											<th scope="col">Lesson Description</th>
										</tr>
									</tr>
									<tbody>
										<tr>
											<td>
												<t t-foreach="doc.slide_ids" t-as="slide">
													<ul>
														<li>
															<b>
																<span>Type:-</span>
															</b>
															<span t-field="slide.name"/>
															<br/>
														</li>
														<b>
															<span>Uploaded by:-</span>
														</b>
														<span t-field="slide.user_id.name"/>
														<br/>
														<b>
															<span>Duration:-</span>
														</b>
														<span t-field="slide.completion_time" t-options='{"widget": "float_time"}'/>
														<br/><br/>
													</ul>
												</t>
											</td>
											<td>
												<t t-foreach="doc.slide_ids" t-as="slide">
													<ul>
														<li>
															<t t-if="slide.course_category_id">
																<b>
																	<span>Course Category:-</span>
																</b>
																	<span t-field="slide.course_category_id" />
																<br/>
															</t>
															<b>
																<span>Pass/Fail:-</span>
															</b>
																<span t-field="slide.pass_fail"/>
															<br/>
															<t t-if="slide.live_session">
																<b>
																	<span>Live Session:-</span>
																</b>
																	<span t-field="slide.live_session"/>
																<br/><br/>
															</t>
														</li>
													</ul>
												</t>
											</td>
											<td>
												<t t-foreach="doc.slide_ids" t-as="slide">
													<t t-if="slide.custom_description != '&lt;p&gt;&lt;br&gt;&lt;/p&gt;'">
														<ul>
															<li>
															<b>
																<span>Description:-</span>
															</b>
																<span t-field="slide.custom_description"/>
															</li>
														</ul>
													</t>
												</t>
											</td>
										</tr>
									</tbody>
								</table>
							</t>
							<br/><br/>

<!-- ********************************************* Table For Quiz Content ******************************************************************* -->
						<t t-if="doc.has_quiz">
							<h3>Quizzes</h3>
							<t t-foreach="doc.slide_ids" t-as="quiz">
								<t t-if="quiz.slide_type == 'quiz'">
									<table class="table table-bordered">
										<tr style="text-align:center;">
											<th colspan="8" scope="col"><span t-field="quiz.name"/></th>
										</tr>
										<tr>
											<tr style="text-align:center;">
												<th colspan="2" scope="col">Questions</th>
												<th scope="col">Question Type</th>
												<th scope="col">Options</th>
												<th scope="col">Correct Answer</th>
											</tr>
										</tr>
										<tbody>
											<t t-foreach="doc.slide_ids" t-as="slide">
												<t t-if="slide.question_ids">
													<t t-foreach="slide.question_ids" t-as="ques">
														<tr>
															<td colspan="2">
																<ul>
																	<li>
																		<span t-field="ques.question"/>
																	</li>
																</ul>
															</td>
															<td>
																<b>
																	<span t-field="ques.custom_question_type"/>
																</b>
															</td>
															<td>
																<t t-if="ques.answer_ids">
																	<t t-foreach="ques.answer_ids" t-as="answers">
																		<ul>
																			<li>
																				<span t-field="answers.text_value"/>
																			</li>
																		</ul>
																	</t>
																</t>
															</td>
															<td>
																<t t-if="ques.answer_ids">
																	<t t-foreach="ques.answer_ids" t-as="answers">
																		<t t-if="answers.is_correct">
																			<ul>
																				<li>
																					<span t-field="answers.text_value"/>
																				</li>
																			</ul>
																		</t>
																	</t>
																</t>
															</td>
														</tr>
													</t>
												</t>
											</t>
										</tbody>
									</table>
								</t>
							</t>
						</t>
						<br/><br/>
<!-- ********************************************* Table For Certification Content ******************************************************************* -->
							<t t-if="doc.has_certificate">
								<h3>Certification</h3>
								<table class="table table-bordered">
									<tr>
										<tr style="text-align:center;">
											<th scope="col">Certification Name</th>
											<th scope="col">Questions</th>
											<th scope="col">Question Type</th>
											<th scope="col">Options</th>
											<th scope="col">Correct Answer</th>
										</tr>
									</tr>
									<tbody>
										<t t-foreach="doc.slide_ids" t-as="slide">
											<t t-if="slide.slide_type == 'certification'">
												<tr>
													<td>
														<ul>
															<li>
																<span t-field="slide.survey_id.title"/>
															</li>
														</ul>
													</td>
													<td>
														<t t-if="slide.survey_id.question_and_page_ids">
															<t t-foreach="slide.survey_id.question_and_page_ids" t-as="question">
																<t t-set="is_page" t-value="0"/>
																<t t-if="question.is_page">
																	<b><span t-field="question.title" /></b>
																	<t t-set="is_page" t-value="1"/>
																</t>
																<t else="">
																	<t t-if="is_page == 0">
																		<ul>
																			<li>
																				<span t-field="question.title" />
																			</li>
																		</ul>
																	</t>
																</t>
															</t>
														</t>
													</td>
													<td>
														<t t-if="slide.survey_id.question_and_page_ids">
															<t t-foreach="slide.survey_id.question_and_page_ids" t-as="question">
																<t t-if="question.custom_question_type">
																	<ul>
																		<li><b><span t-field="question.custom_question_type"/></b></li>
																	</ul>
																</t>
															</t>
														</t>
													</td>
													<td>
														<t t-if="slide.survey_id.question_and_page_ids">
															<t t-foreach="slide.survey_id.question_and_page_ids" t-as="question">
																<t t-if="question.suggested_answer_ids">
																	<t t-foreach="question.suggested_answer_ids" t-as="option">
																		<ul>
																			<li>
																				<t t-if="option.value">
																					<span t-field="option.value"/>
																				</t>
																			</li>
																		</ul>
																	</t>
																	<hr/>
																</t>
															</t>
														</t>
													</td>
													<td>
														<t t-if="slide.survey_id.question_and_page_ids">
															<t t-foreach="slide.survey_id.question_and_page_ids" t-as="question">
																<t t-if="question.suggested_answer_ids">
																	<t t-foreach="question.suggested_answer_ids" t-as="option">
																		<t t-if="option.is_correct">
																			<ul>
																				<li>
																					<span t-field="option.value"/>
																				</li>
																			</ul>
																		</t>
																	</t>
																	<hr/>
																	<br/><br/><br/><br/>
																</t>
															</t>
														</t>
													</td>
												</tr>
											</t>
										</t>
									</tbody>
								</table>
							</t>
						<br/><br/>
						</div>
					</t>
				</t>
			</t>
		</template>
	</data>
</odoo>