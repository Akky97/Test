<odoo>
    <template id="documentation_page" name="Documentation Page" inherit_id="portal.portal_my_home" customize_show="True" priority="50">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="replace">
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">Certifications</t>
                <t t-set="url" t-value="'/my/certifications'"/>
                <!-- <t t-set="placeholder_count" t-value="'timesheet_count'"/> -->
            </t>
        </xpath>
    </template>
