<odoo>
    <template id="ecom_lms.change_language_template" name="Change Language">
        <t t-call="web.login_layout">
            <style>
                #o_logout_divider{
                display:none;
                }
            </style>
            <div t-if="message" class="oe_login_form clearfix">
                <p class="alert alert-success" t-if="message" role="status">
                    <t t-esc="message"/>
                </p>
                <a href="/web/login" class="btn btn-link btn-sm float-right" role="button">Back to Login</a>
            </div>
            <form class="oe_reset_password_form" role="form" method="post" >
                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                <input type="hidden" name="redirect" t-att-value="redirect"/>
                <p class="alert alert-danger" t-if="error" role="alert">
                    <t t-esc="error"/>
                </p>

                <div class="form-group">
                    <label for="language">Preferred Language:</label>
                    <select class="form-control form-control-sm" name="language" id="language">
                        <option value="english">English</option>
                        <option value="hindi">Hindi</option>
                        <option value="gujarati">Gujarati</option>
                        <option value="marathi">Marathi</option>
                        <option value="assamese">Assamese</option>
                        <option value="tamil">Tamil</option>
                        <option value="kannada">Kannada</option>
                        <option value="malyalam">Malyalam</option>
                        <option value="telugu">Telugu</option>
                    </select>
                </div>
                <div class="form-group">
                <t t-if="employee"> 
                	<t t-if="categories"> 
                    <!-- <strong>Select topic of interests:</strong> -->
	                    <label for="category_id">Select topic of interests:</label>
	                    	<select  multiple="multiple" class="form-control form-control-sm" name="category_id" id="category1">
			                   <option value="">Category...</option>
			                        <t t-foreach="categories" t-as="category">
			                            <option t-att-value="category" id="option_id1">
			                                <t t-esc="category.name"/>
			                                <t t-set="multi_upload" t-value="course_id"/>
			                            </option>
	
	
			                        </t>
			                    </select>
                    </t> 
                </t>
                     
                    
                    
                    
                    
                    <!-- <t t-if="categories">
                    	<strong>Select topic of interests:</strong>
                        <t t-foreach="categories" t-as="category">
                            <li class="list-group-item">
                                <input type="checkbox"  name="category_select"
                                       t-att-value="category['id']"/>
                                <t t-esc="category.name"/>
                            </li>
                        </t>
                    </t>  -->
                </div>


                <div class="clearfix oe_login_buttons">
                    <button type="submit" class="btn btn-primary btn-block">Confirm</button>
                    <div class="d-flex justify-content-between align-items-center small mt-2">
                        <a t-if="not token" t-attf-href="/web/login?{{ keep_query() }}">Back to Login</a>
                        <a t-if="invalid_token" href="/web/login">Back to Login</a>
                    </div>
                    <div class="o_login_auth"/>
                </div>
            </form>
        </t>
    </template>

    <record id="language_select_email_template" model="mail.template">
        <field name="name">Language And Interest Selection Email</field>
        <field name="model_id" ref="base.model_res_users"/>
        <field name="subject">Language Interest Selection</field>
        <field name="email_from">${object.partner_id.email_formatted |safe}</field>
        <field name="email_to">${object.login}</field>
        <field name="body_html" type="html">
            <div>
                Congraulations ${object.name},
                <br/>
                <br/>
                You Have Succesfully Selected a Preffered Language:${object.language_selection}
                <br/>
                <br/>
                Your topic of interest is:${object.topic_of_interest}
                <br/>
                <br/>
            </div>
        </field>
    </record>

