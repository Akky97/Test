<template id='journey_card' name="Journey Card">
    <div t-attf-class="card w-100 o_wslides_course_card mb-4">
    	<t t-set="j_image" t-value="website.image_url(journey, 'journey_image')"/>
        <!-- <t t-set="course_image" t-value="website.image_url(channel, 'image_1024')"/> -->
        <a t-attf-href="/journey/#{slug(journey)}" t-title="journey.name">
        <div t-if="journey.journey_image" class="card-img-top" t-attf-style="padding-top: 50%; background-image: url(#{j_image}); background-size: cover; background-position:center"/>
        <div t-else="" class="o_wslides_gradient card-img-top position-relative" style="padding-top: 50%; opacity: 0.8">
                <i class="fa fa-graduation-cap fa-2x mr-3 mb-3 position-absolute text-white-75" style="right:0; bottom: 0"/>
            </div>
        </a>
        <div class="card-body p-3">
            <!-- <a class="card-title h5 mb-2 o_wslides_desc_truncate_2" t-attf-href="/journey/#{slug(journey)}" t-esc="journey.name"/> -->
            <a class="card-title h5 mb-2 o_wslides_desc_truncate_2" t-attf-href="/journey/#{slug(journey)}" t-esc="journey.description_short"/>
            
            <div class="card-text mt-1">
                Courses: <t t-esc="journey.course_count"/>
            </div>
            
            <t t-if="journey in request.env.user.my_journey_ids">
	            <t t-if="journey.journey_completed_mail">
	                 <span class="badge badge-pill badge-success py-1 px-2 mx-auto" style="font-size: 1em"><i class="fa fa-check"/> Completed</span>
                </t>
                <t t-else="">
                     <div class="progress flex-grow-1 bg-black-50" style="height: 6px;">
                         <div class="progress-bar" role="progressbar" t-attf-style="width: #{journey.journey_completion}%" t-att-aria-valuenow="journey.journey_completion" aria-valuemin="0" aria-valuemax="100"></div>
                     </div>
                     <div class="ml-3 small">
                         <span class="o_wslides_progress_percentage" t-esc="journey.journey_completion"/> %
                     </div>
                </t>
            </t>
            <div class="col-12 col-md d-flex align-items-start justify-content-md-end mb-2 mb-md-0">
                <div class="text-muted border-left pl-3">
                    <div class="o_wslides_js_slide_like mr-2">
                        <span>
                            <t t-set="path" t-value="request.httprequest.path"/>
                            <div t-if="journey.sudo().journey_channel_partner_ids">
                                <t t-set="count" t-value="0"/>
                                <div t-foreach="journey.sudo().journey_channel_partner_ids" t-as="journey_attendee">
                                    <div t-if="request.env.user.partner_id == journey_attendee.partner_id">
                                        <t t-set="count" t-value="1"/>
                                    </div>
                                </div>
                                <div t-if="count == 0">
                                    <div class="modal fade" id="journeyExampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h4 class="modal-title" style="color:black;" id="exampleModalLabel">Journey Alert</h4>
                                                </div>
                                            <div class="modal-body">
                                                <h5>
                                                    <strong>Journey Enrollment is required to Like/Dislike any journey.</strong>
                                                </h5>
                                            </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-info" data-dismiss="modal">Close</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <span>
                                        <a type="button" class="fa fa-thumbs-up" t-attf-href="#" data-toggle="modal" data-target="#journeyExampleModal"/>
                                            <span t-esc="journey.likes"/>
                                        <a type="button" class="fa fa-thumbs-down" t-attf-href="#" data-toggle="modal" data-target="#journeyExampleModal"/>
                                            <span t-esc="journey.dislikes"/>
                                    </span>
                                </div>
                                <div t-if="count == 1">
                                    <div class="modal fade" id="journeyExampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h4 class="modal-title" style="color:black;" id="exampleModalLabel">Journey Alert</h4>
                                                </div>
                                            <div class="modal-body">
                                                <h5>
                                                    <strong>Journey Enrollment is required to Like/Dislike any journey.</strong>
                                                </h5>
                                            </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-info" data-dismiss="modal">Close</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
<!--                                    <span>-->
<!--                                        <a type="button" class="fa fa-thumbs-up" t-attf-href="#" data-toggle="modal" data-target="#journeyExampleModal"/>-->
<!--                                            <span t-esc="journey.likes"/><span>Firstddd</span>-->
<!--                                        <a type="button" class="fa fa-thumbs-down" t-attf-href="#" data-toggle="modal" data-target="#journeyExampleModal"/>-->
<!--                                            <span t-esc="journey.dislikes"/><span>ddd</span>-->
<!--                                    </span>-->
                                </div>
                                <div t-foreach="journey.sudo().journey_channel_partner_ids" t-as="attend_partner">
                                    <div t-if="request.env.user.partner_id == attend_partner.partner_id">
                                        <div t-if="attend_partner.journey_not_liked_disliked">
                                            <span>
                                                <a type="button" class="fa fa-thumbs-o-up" t-attf-href="/journey/count/like/#{slug(journey)}?ref=#{path}" role="img" aria-label="Likes" title="Likes"></a>
                                                <span t-esc="journey.likes"/>
                                                <a type="button" class="fa fa-thumbs-o-down" t-attf-href="/journey/count/dislike/#{slug(journey)}?ref=#{path}" role="img" aria-label="Dislikes" title="Dislikes"></a>
                                                <span t-esc="journey.dislikes"/>
                                            </span>
                                        </div>
                                        <div t-if="attend_partner.journey_liked">
                                            <span>
                                                <a type="button" class="fa fa-thumbs-up" t-attf-href="#" role="img" aria-label="Likes" title="Likes"></a>
                                                <span t-esc="journey.likes"/>
                                                <a type="button" class="fa fa-thumbs-o-down" t-attf-href="/journey/count/dislike/#{slug(journey)}?ref=#{path}" role="img" aria-label="Disikes" title="Disikes"></a>
                                                <span t-esc="journey.dislikes"/>
                                            </span>
                                        </div>
                                        <div t-if="attend_partner.journey_disliked">
                                            <span>
                                                <a type="button" class="fa fa-thumbs-o-up" t-attf-href="/journey/count/like/#{slug(journey)}?ref=#{path}" role="img" aria-label="Likes" title="Likes"></a>
                                                <span t-esc="journey.likes"/>
                                                <a type="button" class="fa fa-thumbs-down" t-attf-href="#" role="img" aria-label="Disikes" title="Disikes"></a>
                                                <span t-esc="journey.dislikes"/>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div t-if="not journey.sudo().journey_channel_partner_ids">
                                <div class="modal fade" id="journeyExampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h4 class="modal-title" style="color:black;" id="exampleModalLabel">Journey Alert</h4>
                                            </div>
                                        <div class="modal-body">
                                            <h5>
                                                <strong>Journey Enrollment is required to Like/Dislike any journey.</strong>
                                            </h5>
                                        </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-info" data-dismiss="modal">Close</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <span>
                                    <a type="button" class="fa fa-thumbs-up" t-attf-href="#" data-toggle="modal" data-target="#journeyExampleModal"/>
                                        <span t-esc="journey.likes"/>
                                    <a type="button" class="fa fa-thumbs-down" t-attf-href="#" data-toggle="modal" data-target="#journeyExampleModal"/>
                                        <span t-esc="journey.dislikes"/>
                                </span>
                            </div>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</template>



