<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>

    <record id="pwa_notification_template_view_form" model="ir.ui.view">
        <field name="name">pwa.notification.template.view.form</field>
        <field name="model">pwa.notification.template</field>
        <field name="arch" type="xml">
            <form string="PWA Notifictaion Template">
                <header>
                	<!-- <button name="pwa_send_notification_button" string="Send" type="object"  class="oe_highlight"/>  -->
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="user_id"/>
                        </group>
                        <group>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="pwa_notification_template_view_tree" model="ir.ui.view">
        <field name="name">pwa.notification.template.view.tree</field>
        <field name="model">pwa.notification.template</field>
        <field name="arch" type="xml">
            <tree string="PWA Notifictaion Template">
                <field name="name"/>
            </tree>
        </field>
    </record>


    <record model="ir.actions.act_window" id="action_pwa_notification_template">
        <field name="name">PWA Notifictaion Template</field>
        <field name="res_model">pwa.notification.template</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="pwa_notification_template_view_tree"></field>
        <field name="help" type="html">
          <p class="o_view_nocontent_empty_folder">
            Nobody has replied to your Lesson yet
          </p>
        </field>
    </record>


