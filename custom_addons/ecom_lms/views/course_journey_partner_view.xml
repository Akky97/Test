<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="course_journey_partner_view_search" model="ir.ui.view">
            <field name="name">course.journey.partner.search</field>
            <field name="model">course.journey.partner</field>
            <field name="arch" type="xml">
                <search string="Journey Member">
                    <field name="partner_id"/>
                    <field name="partner_email"/>
                    <field name="journey_id"/>
                </search>
            </field>
        </record>

        <record id="course_journey_partner_action" model="ir.actions.act_window">
            <field name="name">Attendees</field>
            <field name="res_model">course.journey.partner</field>
            <field name="view_mode">tree</field>
            <field name="search_view_id" ref="course_journey_partner_view_search"/>
        </record>

        <record id="course_journey_partner_view_tree" model="ir.ui.view">
            <field name="name">course.journey.partner.tree</field>
            <field name="model">course.journey.partner</field>
            <field name="arch" type="xml">
                <tree string="Attendees" editable="top">
                    <field name="create_date"/>
                    <field name="partner_id" string="Contact"/>
                    <field name="partner_email"/>
                    <field name="journey_id" string="Journey" invisible="context.get('default_journey_id',False)" />
                    <field name="journey_completion" string="Progress" widget="progressbar" />
                   <!--  <field name="completion" string="Progress" widget="progressbar" /> -->
                    <field name="journey_completed" string="Completed" invisible="1"/>
                    <field name="journey_completed_mail" string="Completed"  invisible="1"/>
                     <field name="journey_complete_date" string="Date"  invisible="1" />
                    <button name="unlink" title="Remove" icon="fa-times" type="object"/> 
                </tree>
            </field>
        </record>

        <record id="course_journey_partner_action" model="ir.actions.act_window">
            <field name="name">Attendees</field>
            <field name="res_model">course.journey.partner</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
