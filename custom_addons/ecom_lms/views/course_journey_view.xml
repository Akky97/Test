<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="course_journey_form_view" model="ir.ui.view">
            <field name="name">course.journey.form.view</field>
            <field name="model">course.journey</field>
            <field name="arch" type="xml">
                <form string="Journey">
                    <sheet>
                    	<div class="oe_button_box" name="button_box">
                            <!-- <button name="action_redirect_to_journey_members"
                                type="object"
                                icon="fa-users"
                                class="oe_stat_button"
                                <field name="members_count" string="Attendees" widget="statinfo"/>
                            </button> -->
                            
                            
                            <button name="action_redirect_to_journey_members"
                                type="object"
                                icon="fa-users"
                                class="oe_stat_button"
                                >
                                <field name="members_count" string="Attendees" widget="statinfo"/>
                            </button>
                        </div>
                         <field name="journey_image" widget="image" class="oe_avatar" />
                         <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Name"/>
                            <h1><field name="name" default_focus="1"/></h1>
                        </div>
                        <group>
                        	<group>
                                 <!-- <field name="name"/> -->
                                 <field name="description_short" required="1"/>
                                 <field name="course_closed_bool" invisible="1"/>
                                 
                              </group>
                        </group>
                        <notebook>
                            <page string="Courses" >
                                <field name="courses_ids" >
                                    <tree editable="bottom">
                                        <field name="course_id"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Other Info" >
                                <group>
		                        	<group>
		                                 <field name="user_id" readonly="1" force_save="1"/>
		                                 
		                              </group>
                        		</group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="course_journey_tree_view" model="ir.ui.view">
            <field name="name">course.journey.tree.view</field>
            <field name="model">course.journey</field>
            <field name="arch" type="xml">
                <tree string="Journey">
                    <field name="name"/>
                    <field name="description_short"/>
                    <field name="user_id"/>
                    <field name="course_name_ids" widget="many2many_tags"/>
                </tree>
            </field>
        </record>


        <record id="course_journey_act_window" model="ir.actions.act_window">
            <field name="name">Journeys</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">course.journey</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Journey.
                </p>
            </field>
        </record>
        


        <menuitem id="course_journey_menu" name="Journeys" parent="website_slides.website_slides_menu_courses"  action="course_journey_act_window" groups="base.group_system"/>

    </data>
</odoo>