<odoo>
    <record id="inherited_view_slide_channel_form" model="ir.ui.view">
        <field name="name">inherited.slide.channel</field>
        <field name="model">slide.channel</field>
        <field name="inherit_id" ref="website_slides.view_slide_channel_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_channel_invite']" position="after">
                <button name="action_zip_download" string="Export Zip" type="object" class="oe_highlight"/>
                <field name="has_certificate" invisible="1"/>
                <field name="has_quiz" invisible="1"/>
            </xpath>
           <!-- Add Lesson -->
            <xpath expr="//create[@name='add_slide_lesson']" position="replace">
                <create name="add_slide_lesson" string="Add Lesson"/>
            </xpath>
            <!-- Customizable Description Field -->
            <xpath expr="//page[@name='description']" position="replace">
                <page name="description" string="Description">
                    <group>
                        <field name="custom_html_description" widget="html" colspan="4" placeholder="Common tasks for a computer scientist is asking the right questions and answering questions. In this course, you'll study those topics with activities about mathematics, science and logic."/>
                    </group>
                </page>
            </xpath>
            <!-- Course Keywords -->
            <xpath expr="//field[@name='tag_ids'] " position="replace">
                <field name="custom_tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" placeholder="Course Keywords"/>
            </xpath>
            <!-- Client's Group Visibility replaced with Display(Odoo's Default) -->
            <xpath expr="//group[@name='course'] " position="after">
                <group string="Course Categories">
                    <field name="course_category_id"/>
                   <!--  <button name="%(action_course_title_translation_wiz)d" string="Translation" class="oe_edit_only" type="action"></button> -->
                    <!-- <button name="translate_course_title_data" string="Translate" type="object" class="oe_edit_only" /> -->
                </group>
            </xpath>

            
            <field name="name" position="before">
            	<button name="translate_course_title_data" string="Translate" type="object" class="oe_edit_only" />
            </field>
            <xpath expr="//group[@name='display'] " position="replace">
                <group name="display" string="Group Visibility">
                    <field name="custom_visibility" widget="radio"/>
                </group>
            </xpath>
            <xpath expr="//group[@name='display'] " position="after">
                <group string="Notified Users" attrs="{'invisible': [('custom_visibility', '!=','semi_public')]}">
                    <field name="load_nominated_user" attrs="{'invisible': [('custom_visibility', '!=','semi_public')]}"/>
                    <button name="action_nominated_user_upload" type="object" string="Upload Nominated User"  attrs="{'invisible': [('custom_visibility', '!=','semi_public')]}" class="oe_highlight"/>
                    <field name="nominated_user_ids" widget="many2many_tags" attrs="{'invisible': [('custom_visibility', '!=','semi_public')]}"/>
                </group>
                
                <group string="Languages" >
                    <field name="lang_values" required="1"/>
                    <field name="user_ids" invisible="1" widget="many2many_tags"/>
                    <button name="newpublish_url" string="New pub" type="object"/>
                </group>
            </xpath>
            
            <!-- Course Duration field referenced with lesson's duration field -->
            <xpath expr="//field[@name='channel_type'] " position="after">
                <field name="is_revision"/>
                <field name="revision_message" attrs="{'invisible': [('is_revision', '=', False)]}"/>
<!--                <field name="pass_fail" string="Pass/Fail"/>-->
<!--                <field name="custom_pass_percent" attrs="{'invisible': [('pass_fail', '=', 'all_pass')]}"/>-->
                <field name="required_course" widget="many2many_tags"/>
                <field name="course_duration" string="Duration" widget="float_time"/>
                <field name="availability_option"/>
                <field name="course_open_date" widget="datetime"
                       attrs="{'invisible': [('availability_option', '=', False)]}"/>
                <field name="course_close_date" widget="datetime"
                       attrs="{'invisible': [('availability_option', '=', False)]}"/>
                       
                <field name="course_successfully_created" invisible="1"/>
                       
            </xpath>
            <xpath expr="//field[@name='channel_type'] " position="attributes">
            	<attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//notebook/page[@name='content']/field[@name='slide_ids'] " position="attributes">
                <attribute name="attrs">{'readonly': [('course_successfully_created', '!=', True)]}</attribute>
            </xpath>
            
            <xpath expr="//field[@name='user_id'] " position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//group[@name='access_rights'] " position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            
            <xpath expr="//field[@name='website_id'] " position="after">
                <field name="is_featured"/>
                <field name="featured_group_id" attrs="{'invisible': [('is_featured', '=', False)],'required': [('is_featured', '=',True)]}"/>
                <field name="journey_name_ids" widget="many2many_tags"/>
                <field name="recommend_users_ids" invisible="1">
                    <tree create="0">
                        <field name="res_user_id"/>
                    </tree>
                </field>
            </xpath>
        </field>
    </record>
    <record id="inherited_view_slide_channel_kanban" model="ir.ui.view">
        <field name="name">inherited.slide.channel.kanban</field>
        <field name="model">slide.channel</field>
        <field name="inherit_id" ref="website_slides.slide_channel_view_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='info_total_time'] " position="after">
                <div class="d-flex" name="revision_message">
                    <span class="mr-auto"><label for="revision_message" class="mb0">Course Revision</label></span>
                    <field name="revision_message"/>
                </div>
            </xpath>
        </field>
    </record>

</odoo>