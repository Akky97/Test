								<input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
								<div class="body">
									<input type="hidden" name="course_id" t-att-value="channel.id" id="course_id"
									class="form-control" invisibe="1"/>
									  <br/>
									  <br/>
									<label for="user_id1">Select Users:</label>
									<select multiple="multiple" name="user_id1" id="user_id1" class="form-control"  style="width:100%" required="True">
										<option value="">Select</option>
											<t t-foreach="user_details" t-as="user">
												<option t-att-value="user.id" id="option_user_id1">
														<t t-esc="user.name"/>
												</option>
											</t>
									</select>
