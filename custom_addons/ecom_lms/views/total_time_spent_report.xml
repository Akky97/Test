<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="time_spent_form_view" model="ir.ui.view">
            <field name="name">time.spent.report.form</field>
            <field name="model">time.spent.report</field>
            <field name="arch" type="xml">
                <form string="Total Time Spent Report" create="0" delete="0">
                    <sheet>
                        <group>
                            <group>
                                <field name="user_code"/>
                                <field name="name"/>
                                <field name="function_code"/>
                                <field name="designation"/>
                                <field name="state_name"/>
                                <field name="work_location_code"/>
                                <field name="check_in_date"/>
                                <field name="check_out_date"/>

                            </group>
                            <group>
                                <field name="cost_type_code"/>
                                <field name="band_code"/>
                                <field name="region"/>
                                <field name="number_of_login"/>
                                <field name="time_spent"/>
                                <field name="check_in"/>
                                <field name="check_out"/>
                                <field name="logout"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="time_spent_tree_view" model="ir.ui.view">
            <field name="name">time.spent.report.tree</field>
            <field name="model">time.spent.report</field>
            <field name="arch" type="xml">
                <tree string="Total Time Spent Report" create="0" delete="1">
                    <field name="user_code"/>
                    <field name="name"/>
                    <field name="function_code"/>
                    <field name="designation"/>
                    <field name="state_name"/>
                    <field name="work_location_code"/>
                    <field name="cost_type_code"/>
                    <field name="band_code"/>
                    <field name="region"/>
                    <field name="number_of_login"/>
                    <field name="check_in"/>
                    <field name="check_out"/>
                    <field name="check_in_date"/>
                    <field name="check_out_date"/>
                    <field name="time_spent"/>
                </tree>
            </field>
        </record>


