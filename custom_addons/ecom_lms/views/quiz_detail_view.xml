<?xml version="1.0" ?>
<odoo>
	<data>
		<template id='quiz_card_view' name="Quiz" track="1">
		    <t t-set="body_classname" t-value="'o_wslides_body'"/>
				<t t-call="website.layout">
					<div id="wrap" t-attf-class="wrap mt-0">
						<div t-attf-class="o_wslides_course_header o_wslides_gradient position-relative text-white pb-md-0 pt-2 pt-md-5">
							<div class="container mt-5 mt-md-3 mt-xl-4">
								<div class="row align-items-end align-items-md-stretch">
									<!-- ==== Header Left ==== -->
									<div class="col-12 col-md-4 col-lg-3">
										<div class="d-flex align-items-end justify-content-around h-100">
											<div t-if="quizzes.quiz_image" t-field="quizzes.quiz_image" t-options='{"widget": "image", "class": "o_wslides_course_pict d-inline-block mb-2 mt-3 my-md-0"}' class="h-100"/>
												<div t-else="" class="h-100">
													<img t-att-src="'/website_slides/static/src/img/channel-training-default.jpg'"
														class="o_wslides_course_pict d-inline-block mb-2 mt-3 my-md-0"/>
												</div>
											</div>
										</div>
									<!-- ==== Header Right ==== -->
										<div class="col-12 col-md-8 col-lg-9 d-flex flex-column">
												<div class="d-flex flex-column">
													<h1 t-field="quizzes.name"/>
													<p class="mb-0 mb-xl-3" t-field="quizzes.description_short"/>

												</div>
										</div>
									</div>
								</div>
							</div>
							<t t-if="quizzes.custom_quiz_ids">
								<div class="container ">
									<div class="row ">
										<div class="col-md-12 d-flex">
											<div class="col-12 col-md-4 col-lg-3 mt-3 mt-md-0">
												<table class="table table-sm mt-3">
													<tr>
														<th class="border-top-0">Create Date</th>
														<td class="border-top-0"><t t-esc="quizzes.create_date" t-options="{'widget': 'date'}"/></td>
													</tr>
													<tr t-if="quizzes.responsible_person_id">
														<th class="border-top-0">Responsible</th>
														<td class="border-top-0"><span t-field="quizzes.sudo().responsible_person_id.name"/></td>
													</tr>

												</table>
											</div>
											<div class="col mt32 mb8 d-flex justify-content-center">
												 <t t-if='not independent_quiz_subscribed'>
													<a role="button"
													 class="btn btn-primary btn-lg" t-attf-href="/start/quizzes/#{slug(quizzes)}" >
														<i class="fa fa-question-circle" role="img" aria-label="Start Quiz" title="Start Quiz"/> Start Quiz
													</a>
												</t>
												<t t-if='independent_quiz_subscribed'>
													<a role="button"
													 class="btn btn-primary btn-lg" t-attf-href="/start/quizzes/#{slug(quizzes)}" >
														<i class="fa fa-question-circle" role="img" aria-label="Start Quiz" title="Start Quiz"/> Start Quiz
													</a>
												</t>
											</div>

										</div>
									</div>
								</div>
							</t>
							<t t-else="">
								<div class="container">
									<div class="row">
										<div class="col-md-12 d-flex">
											<div class="col-12 col-md-4 col-lg-3 mt-3 mt-md-0">
												<table class="table table-sm mt-3">
													<tr>
														<th class="border-top-0">Create Date</th>
														<td class="border-top-0">
															<t t-esc="quizzes.create_date" t-options="{'widget': 'date'}"/>
														</td>
													</tr>
													<tr t-if="quizzes.responsible_person_id">
														<th class="border-top-0">Responsible</th>
														<td class="border-top-0">
															<span t-field="quizzes.sudo().responsible_person_id.name"/>
														</td>
													</tr>
												</table>
											</div>
											<div class="col mt32 mb8 d-flex justify-content-center">
												<div>
													<p>
														<strong> There are no questions added to this quiz. Please contact the administrator. </strong>
													</p>
												</div>
											</div>
										</div>
									</div>
								</div>
							</t>

					</div>
				</t>
		</template>
	</data>
</odoo>