<?xml version="1.0" encoding="utf-8"?>
<odoo>

         <record id="independent_quiz_form_view" model="ir.ui.view">
            <field name="name">quiz.report.form</field>
            <field name="model">quiz.report</field>
            <field name="arch" type="xml">
                <form string="Quizzes Report" create="0">
                    <sheet>
                        <group>
                            <group>
<!--                                <field name="quiz_id"/>-->
<!--                                <field name="partner_email"/>-->
<!--                                <field name="responsible_person_id"/>-->
                            <field name="quiz_id" string="Quiz Name"/>
                            <field name="start_datetime"/>
                            <field name="user_id"/>
                            <field name="partner_id"/>
                            <field name="attempts_num" readonly="1"/>
<!--                            <field name="quiz_completed" readonly="1"/>-->
                            </group>
                            <group>
<!--                                <field name="no_of_attempts" force_save="1"/>-->
<!--                                <field name="description_short"/>-->
<!--                                <field name="attendee_ids" widget="many2many_tags"/>-->
<!--                                <field name="attendee_ids" widget="many2many_tags"/>-->
                            </group>
                        </group>
                        <notebook>
                            <page string="Report Lines" name="report_lines">
                                <field name="quiz_line">
                                    <tree>
                                        <field name="quiz_id"/>
                                        <field name="quiz_question_id"/>
                                        <field name="selected_answer"/>
                                        <field name="correct_answer"/>
<!--                                        <field name="option_ids">-->
<!--                                            <tree editable="bottom" create="true">-->
<!--                                                <field name="options"/>-->
<!--                                                <field name="quiz_report_line_id" invisible="1"/>-->
<!--                                            </tree>-->
<!--                                        </field>-->
                                        <field name="answer_score"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <group>
                                        <field name="quiz_id"/>
                                        <field name="quiz_question_id"/>
                                            </group>
                                            <group>
                                        <field name="selected_answer"/>
                                        <field name="correct_answer"/>
                                        <field name="answer_score"/>

                                            </group>
                                        </group>
                                        <notebook>
                                            <page string="Options Lines" name="option_lines">
                                        <field name="option_ids">
                                            <tree editable="bottom" create="true">
<!--                                                <field name="options"/>-->
                                                <field name="slide_ans_id"/>
                                                <field name="quiz_report_line_id" invisible="1"/>
                                            </tree>
                                        </field>
                                            </page>
                                        </notebook>

                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>

                </form>

            </field>
        </record>

        <record id="independent_quiz_tree_view" model="ir.ui.view">
            <field name="name">quiz.report.tree</field>
            <field name="model">quiz.report</field>
            <field name="arch" type="xml">
                <tree string="Quizzes Report" create="0">
                    <field name="quiz_id" string="Quiz Name"/>
                    <field name="start_datetime"/>
                    <field name="user_id"/>
                    <field name="partner_id" invisible="1"/>
<!--                    <field name="attendee_ids" widget="many2many_tags" string="Attendees Name"/>-->
                    <field name="attempts_num" />
<!--                    <field name="partner_id"/>-->
<!--                    <field name="custom_question_id"/>-->
                </tree>
            </field>
        </record>


        <record id="independent_quiz_action" model="ir.actions.act_window">
            <field name="name">Quizzes Report</field>
            <field name="res_model">quiz.report</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Quizzes Report.
                </p>
            </field>
        </record>


        <menuitem id="independent_quiz_menu" name="Independent Quiz" parent="website_slides.website_slides_menu_report"  action="independent_quiz_action" groups="ecom_lms.regional_admin_user_group"/>

</odoo>