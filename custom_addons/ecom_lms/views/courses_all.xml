<?xml version="1.0" ?>
<odoo>

	<template id="all_courses_ecom" name="Odoo All Courses"
		inherit_id="website_slides.courses_all">
		<xpath expr="//ul[@class='navbar-nav flex-grow-1']" position="inside">
		
		
				<form role="form" action="/slides/all/category" method="post" class="form-inline o_wslides_nav_navbar_right d-none d-md-flex">
	    		<!-- <t t-set="multi_upload" t-value=""/> -->
	    		<!-- <form role="form" t-att-action="'/course-wise/leadership/%s' % (multi_upload)" method="post"> -->
	                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
	                <t t-if ="category_details">
			           <strong class="form-group text-white mr-2">Category :</strong>
			           		<div class="input-group">
			              <!--  <div class="form-group btn-group"> -->
			               	<select name="category_id" id="select_id2">
			                   <option value="">Category...</option>
			                        <t t-foreach="category_details" t-as="categ_id">
			                            <option t-att-value="categ_id" id="categ_id2">
			                                <t t-esc="categ_id.name"/>
			                                <t t-set="multi_upload" t-value="course_id"/>
			                            </option>


			                        </t>
			                    </select>
			                    
			                    <div class="input-group-append">
			                    
			                    <button class="btn border border-left-0 oe_search_button" type="submit" aria-label="Submit" title="Submit">
                                        <i class="fa fa-search"/>
                                    </button>
						</div>
			               </div>
					 </t>

               	</form>
               	
               	
               	<form role="form" action="/slides/all/lang/filter" method="post" class="form-inline o_wslides_nav_navbar_right d-none d-md-flex">
	    		<!-- <t t-set="multi_upload" t-value=""/> -->
	    		<!-- <form role="form" t-att-action="'/course-wise/leadership/%s' % (multi_upload)" method="post"> -->
	                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
			           <!-- <strong class="form-group text-white mr-2">Switch Language :</strong> -->
			           		<div class="input-group">
			              <!--  <div class="form-group btn-group"> -->
				               	<!-- <label for="language">Switch Language:</label> -->
			                    <select class="form-control form-control-sm" name="filtered_language" id="filtered_language">
			                    	<option value="select"><b>Filter Language..</b></option>
			                        <option value="english">English</option>
			                        <option value="hindi">Hindi</option>
			                        <option value="gujarati">Gujarati</option>
			                        <option value="marathi">Marathi</option>
			                        <option value="assamese">Assamese</option>
			                        <option value="tamil">Tamil</option>
			                        <option value="kannada">Kannada</option>
			                        <option value="malyalam">Malyalam</option>
			                        <option value="telugu">Telugu</option>
			                    </select>
			                    
			                    <div class="input-group-append">
			                    
			                    <button class="btn border border-left-0 oe_search_button" type="submit" aria-label="Submit" title="Submit">
                                        <i class="fa fa-search"/>
                                    </button>
						</div>
			               </div>

               	</form>
               	
		</xpath>
		
		<xpath expr="//div[@class='form-inline ml-auto d-none d-md-flex']" position="replace">
			<div class="form-inline ml-auto d-none d-md-flex" t-if="search_slide_type or search_my or search_tags or search_channel_tag_id or categ_val_bool or filter_lang_val_bool">
                            <a href="/slides/all" class="btn btn-info text-nowrap mr-2" role="button" title="Clear filters">
                                <i class="fa fa-eraser"/> Clear filters
                            </a>
                        </div>
        </xpath>
        
        
        <xpath expr="//div[@class='o_wprofile_email_validation_container mb16 mt16']" position="after">
        	<t t-if="categ_val_bool and filter_categ_id">
				<span class="align-items-baseline border d-inline-flex pl-2 rounded mb-2">
	                      <i class="fa fa-tag mr-2 text-muted"/>
	                      	Category
	                      	<t t-esc="filter_categ_id"/>
	                      	<a href="/slides/all" class="btn border-0 py-1">&#215;</a>
	                      <!-- Category
	                      >  <input name="filter_categ" t-att-value="filter_categ_id" readonly="1"/> -->
	                    </span>
           </t>
           
           <t t-if="filter_lang_val_bool and filter_lang_selected">
				<span class="align-items-baseline border d-inline-flex pl-2 rounded mb-2">
	                      <i class="fa fa-tag mr-2 text-muted"/>
	                      	Language
	                      	<t t-esc="filter_lang_selected"/>
	                      	<a href="/slides/all" class="btn border-0 py-1">&#215;</a>
	                      <!-- Category
	                      >  <input name="filter_categ" t-att-value="filter_categ_id" readonly="1"/> -->
	                    </span>
           </t>
        </xpath>
        <xpath expr="//div[@class='container o_wslides_home_main pb-5']" position="replace">
        	<div class="container o_wslides_home_main pb-5">
                <div t-if="not channels and not search_term and not search_slide_type and not search_my and not search_tags and not search_channel_tag_id">
                    <p class="h2">No course available yet.</p>
                    <p groups="website_slides.group_website_slides_officer">Click on "New" in the top-right corner to write your first course.</p>
                </div>
                <div t-elif="search_term and not channels" class="alert alert-info mb-5">
                    No course was found matching your search <code><t t-esc="search_term"/></code>.
                </div>
                <div t-elif="not channels" class="alert alert-info mb-5">
                    No course was found matching your search.
                </div>
                <div t-else="" class="row mx-n2">
                    <t t-foreach="channels" t-as="channel">
                        <div class="col-12 col-sm-6 col-md-4 col-lg-3 px-2 d-flex flex-grow-1">
                            <t t-call="website_slides.course_card"/>
                        </div>
                    </t>
                </div>
            </div>
           </xpath>
        
	</template>

</odoo>
