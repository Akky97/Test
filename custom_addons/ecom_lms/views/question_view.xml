<odoo>
    <record id="inherited_view_slide_question_form" model="ir.ui.view">
        <field name="name">inherited.slide.question.view.form</field>
        <field name="model">slide.question</field>
        <field name="inherit_id" ref="website_slides.slide_question_view_form"/>
        <field name="arch" type="xml">
<!--            <xpath expr="//field[@name='answer_ids']" position="replace">-->
<!--                <attribute name="invisible">1</attribute>-->
<!--            </xpath>-->

            <!-- Add Lesson -->
            
            <xpath expr="//field[@name='answer_ids']/tree/field[@name='text_value']" position="after">
            	<button name="translate_slide_ans_title_data" string="Translate" type="object" class="oe_edit_only" />
           	</xpath>
           	
           	<xpath expr="//field[@name='answer_ids']/tree/field[@name='comment']" position="after">
            	<button name="translate_slide_ans_comment_data" string="Translate" type="object" class="oe_edit_only" />
           	</xpath>
           	
            
            
            <field name="question" position="before">
            	<button name="translate_slide_qus_title_data" string="Translate" type="object" class="oe_edit_only" />
            </field>
            <xpath expr="/form/sheet/h1" position="after">

                <group>
                    <group>
                        <field name="custom_question_type" widget="radio" string="Question Type"/>
                        <field name="is_page" invisible="1"/>
                    </group>
                    <group>
                            <div class="col-lg-6 offset-lg-3 o_preview_questions">
                                <!-- Multiple Lines Text Zone -->
                                <div attrs="{'invisible': [('custom_question_type', '!=', 'text_box')]}">
                                        <i class="fa fa-align-justify fa-4x" role="img" aria-label="Multiple lines" title="Multiple Lines"/>
                                </div>
                                <!-- Single Line Text Zone -->
                                <div attrs="{'invisible': [('custom_question_type', '!=', 'char_box')]}">
                                    <i class="fa fa-minus fa-4x" role="img" aria-label="Single Line" title="Single Line"/>
                                </div>
                                <!-- Numerical Value -->
                                <div attrs="{'invisible': [('custom_question_type', '!=', 'numerical_box')]}">
                                    <i class="fa fa-2x" role="img" aria-label="Single Line" title="Numeric">Text_____.</i>
                                </div>

                                <!-- Multiple choice: only one answer -->
                                <div attrs="{'invisible': [('custom_question_type', '!=', 'simple_choice')]}" role="img" aria-label="Multiple choice with one answer" title="Multiple choice with one answer">
                                    <div class="row"><i class="fa fa-circle-o  fa-lg"/> True</div>
                                    <div class="row"><i class="fa fa-dot-circle-o fa-lg"/> False</div>

                                </div>
                                <!-- Multiple choice: multiple answers allowed -->
                                <div attrs="{'invisible': [('custom_question_type', '!=', 'multiple_choice')]}" role="img" aria-label="Multiple choice with multiple answers" title="Multiple choice with multiple answers">
                                    <div class="row"><i class="fa fa-check-square-o fa-lg"/> answer</div>
                                    <div class="row"><i class="fa fa-check-square-o fa-lg"/> answer</div>
                                    <div class="row"><i class="fa fa-square-o fa-lg"/> answer</div>
                                </div>
                            </div>
                        </group>
                </group>

                      <notebook>
                   <page string="Answers" name="answers"  attrs="{'invisible': [('is_page', '=', True)]}">
                            <div class="row">
                                <div class="col-6"
                                    attrs="{'invisible': [('custom_question_type', 'not in', ['char_box', 'numerical_box', 'date', 'datetime'])]}">
                                    <div attrs="{'invisible': [('custom_question_type', '!=', 'char_box')]}">
                                        <field name="validation_email" nolabel="1"/>
                                        <label for="validation_email"/><br />

                                        <field name="save_as_email" nolabel="1" attrs="{'invisible': [('validation_email', '=', False)]}"/>
                                        <label for="save_as_email" attrs="{'invisible': [('validation_email', '=', False)]}"/>
                                        <br attrs="{'invisible': [('validation_email', '=', False)]}"/>

                                        <field name="save_as_nickname" nolabel="1"/>
                                        <label for="save_as_nickname"/>
                                    </div>
                                </div>
                                <div class="col-6" attrs="{'invisible': [

                                        ('custom_question_type', 'not in', ['numerical_box', 'date', 'datetime'])]
                                    }">
                                    <group>
<!--                                        <field name="textchar" attrs="{'invisible': [('custom_question_type', '!=', 'text_box')]}" readonly="True"/>-->
<!--                                        <field name="charbox"  attrs="{'invisible': [('custom_question_type', '!=', 'char_box')]}"  readonly="True"/>-->
<!--                                        <field name="answer_numerical_box" string="Correct Answer" attrs="{'invisible': [('custom_question_type', '!=', 'numerical_box')]}"/>-->
<!--                                        <field name="answer_date" string="Correct Answer" attrs="{'invisible': [('custom_question_type', '!=', 'date')]}"/>-->
<!--                                        <field name="answer_datetime" string="Correct Answer" attrs="{'invisible': [('custom_question_type', '!=', 'datetime')]}"/>-->
<!--                                        <field name="is_scored_question"/>-->
<!--                                        <field name="answer_score"/>-->
                                    </group>
                                </div>
                            </div>
<!--                       <group attrs="{'invisible': [('custom_question_type', 'not in', ['simple_choice', 'multiple_choice', 'matrix'])]}">-->
<!--                                <field name="suggested_answer_ids" string="Answers" context="{'default_question_id': active_id}">-->
<!--                                    <tree editable="bottom">-->
<!--                                        <field name="sequence" widget="handle"/>-->
<!--                                        <field name="text_value" string="Choices"/>-->
<!--                                        <field name="value_image" options="{'accepted_file_extensions': 'image/*'}"-->
<!--                                            attrs="{'column_invisible': ['|', ('parent.allow_value_image', '=', False), ('parent.custom_question_type', '=', 'matrix')]}"/>-->
<!--                                        <field name="is_correct" attrs="{'column_invisible': [('parent.custom_question_type', '=', 'matrix')]}"/>-->
<!--&lt;!&ndash;                                        <field name="answer_score" attrs="{'column_invisible': ['|', ('parent.scoring_type', '=', 'no_scoring'), ('parent.custom_question_type', '=', 'matrix')]}"/>&ndash;&gt;-->
<!--                                    </tree>-->
<!--                                </field>-->
<!--                            </group>-->
                       <group attrs="{'invisible': [('custom_question_type', '!=', 'matrix')]}">
                                <field name="matrix_row_ids" context="{'default_matrix_question_id': active_id}" attrs="{'invisible': [('custom_question_type', '!=', 'matrix')]}">
                                    <tree editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="text_value" string="Rows"/>

                                    </tree>
                                </field>
                       </group>
                    </page>
                    <page string="Description">
                        <field name="description" widget="html"/>

                    </page>
                    <page string="Options" attrs="{'invisible': [('is_page', '=', True)]}">
                        <group string="Constraints">
                            <group>
                                <field name="cons_mandatory"/>
                                <field name="constr_error_msg" attrs="{'invisible': [('cons_mandatory', '=', False)]}"/>
                                <field name="matrix_subtype" attrs="{'invisible':[('custom_question_type','not in',['matrix'])],'required':[('custom_question_type','=','matrix')]}"/>
                            </group>
                        </group>
                        <group>
                             <group string="Display" attrs="{'invisible':[('custom_question_type','not in',['simple_choice', 'multiple_choice'])]}">
                                    <field name="column_nb" string="Number of columns"/>
                                    <field name="allow_value_image"/>
                             </group>

                        </group>
                        <group string="Allow Comments" attrs="{'invisible':[('custom_question_type','not in',['simple_choice','multiple_choice', 'matrix'])]}">
                                <field name='comments_allowed' />
                                <field name='comments_message' attrs="{'invisible': [('comments_allowed', '=', False)]}"/>
                                <field name='comment_count_as_answer' attrs="{'invisible': ['|', ('comments_allowed', '=', False), ('custom_question_type', 'in', ['matrix'])]}" />
                            </group>
                        <group string="Live Sessions">
                                <label for="is_time_limited" string="Question Time Limit"/>
                                <div>
                                    <field name="is_time_limited" nolabel="1"/>
                                    <field name="time_limit" nolabel="1" class="oe_inline"
                                        attrs="{'invisible': [('is_time_limited', '=', False)]}" />
                                    <span attrs="{'invisible': [('is_time_limited', '=', False)]}"> seconds</span>
                                </div>
                            </group>
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>

    <record id="inherited_slide_slide_question_form" model="ir.ui.view">
        <field name="name">inherited.slide.question</field>
        <field name="model">slide.slide</field>
        <field name="inherit_id" ref="website_slides.view_slide_slide_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='question_ids'] " position="replace">
                 <field name="question_ids" nolabel="1">
                     <tree string="Add Question">
                         <field name="sequence" widget="handle"/>
                         <field name="slide_id" required="1" invisible="1"/>
                         <field name="question"/>
                         <control>
                             <create name="add_line_control" string="Add a Question"/>
                         </control>
                     </tree>
                 </field>
            </xpath>
        </field>
    </record>

    <record id="inherited_slide_channel_form" model="ir.ui.view">
        <field name="name">inherited.slide.channel</field>
        <field name="model">slide.channel</field>
        <field name="inherit_id" ref="website_slides.view_slide_channel_form"/>
        <field name="arch" type="xml">

            <xpath expr="//button[@name='action_view_slides'] " position="before">
                <button name="action_redirect_to_members_live" type="object" icon="fa-users" groups="website_slides.group_website_slides_officer">
                    <field name="members_count_live" string="Live Attendees" widget="statinfo"/>
                </button>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="view_attendance_live_inherit_test">
       <field name="name">Live Attendance</field>
       <field name="model">slide.channel.partner</field>
       <field name="type">tree</field>
       <field name="inherit_id" ref="website_slides.slide_channel_partner_view_tree"/>
       <field name="arch" type="xml">
               <xpath expr="/tree/field[@name='completion']" position="after">
                   <field name="initailattendance"/>
                   <field name="expired_status"/>
                   <field name="completeattend"/>
               </xpath>
                <xpath expr="/tree/field[@name='partner_email']" position="after">
                	
                   <field name="user_code"/>
                   <field name="time_left" widget="float_time"/>
                   <field name="course_joined" invisible="1"/>
                   <field name="channel_liked" invisible="1"/>
                   <field name="channel_disliked" invisible="1"/>
               </xpath>
               <xpath expr="/tree/field[@name='partner_id']" position="replace">
                	<field name="partner_id" string="Contact" invisible="1"/>
               </xpath>
               <xpath expr="/tree/field[@name='partner_id']" position="after">
                	<field name="custom_user_id" string="User Name" required="1"/>
               </xpath>
       </field>
   </record>

    <record id="live_attendee_slide_channel_partner_view_tree" model="ir.ui.view">
        <field name="name">slide.channel.partner.tree</field>
        <field name="model">slide.channel.partner</field>
        <field name="arch" type="xml">
            <tree string="Live Attendees" editable="top" create="false">
                <field name="create_date"/>
                <field name="partner_id" string="Contact" invisible="1"/>
                <field name="custom_user_id" string="User Name" required="1"/>
                <field name="partner_email"/>
                <field name="user_code"/>
                <field name="time_left"/>
                <field name="course_joined" invisible="1"/>
                <field name="channel_liked" invisible="1"/>
                <field name="channel_disliked" invisible="1"/>
                <field name="channel_id" string="Channel"/>
                <field name="completion" string="Progress" widget="progressbar" />
                <field name="initailattendance"/>
                <field name="expired_status"/>
                <field name="completeattend"/>
                <button name="unlink" title="Remove" icon="fa-times" type="object"/>
            </tree>
        </field>
    </record>

    <record id="inherited_slide_channel_partner_action" model="ir.actions.act_window">
        <field name="name">Live Attendees</field>
        <field name="res_model">slide.channel.partner</field>
        <field name="view_ids" eval="[(5, 0, 0),
                          (0, 0, {'view_mode': 'tree', 'view_id': ref('live_attendee_slide_channel_partner_view_tree')})]"/>
        <field name="view_mode">tree</field>
    </record>

</odoo>