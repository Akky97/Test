<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Paper Format -->

        <record id="paperformat_fai_detail_report" model="report.paperformat">
            <field name="name">Test Report Format</field>
            <field name="default" eval="True" />
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">40</field>
            <field name="margin_bottom">22</field>
            <field name="margin_left">5</field>
            <field name="margin_right">5</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">35</field>
            <field name="dpi">90</field>
        </record>

        <!-- Qweb Report -->

        <record id="action_report_course_content" model="ir.actions.report">
            <field name="name">Course Content</field>
            <field name="model">slide.channel</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">ecom_lms.course_content_template</field>
            <field name="report_file">ecom_lms.course_content_template</field>
            <field name="binding_model_id" eval="False"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="ecom_lms.paperformat_fai_detail_report"/>
        </record>






    </data>
</odoo>
