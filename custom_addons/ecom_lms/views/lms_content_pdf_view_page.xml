<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="lms_content_pdf_view_template" name="LMS Content Pdf View Template">
        <t t-name="website.content-view2">
  <t t-call="website.layout">
      <style>
                  .pdf_view_section{
                  height:650px;
                  overflow:scroll;
                  }
                .pwa_pdf_view_course_head{
                    margin-top: -15px;
                    line-height: 22px;
                    white-space: nowrap;
                    width: 174px;
                    overflow: hidden;
                    text-overflow: ellipsis;
                    height: 27px;

                }

                .pwa_view_content_view_badge_btn{
                    text-align: end !important;
                    padding: 17px 21px;
             }
                   .view_all_view_head {
                    font-size: 40px;
                }
                 .view_all_banner_sub {
                        font-size: 20px;
                    }

                .view_all_banner{
                height:200px;
                width:100%;
                background: #FFFFFF;
                background: -webkit-linear-gradient(to left, rgba(212, 252, 121, 0.5), rgba(150, 230, 161, 0.5));  background: linear-gradient(to top, rgba(212, 252, 121, 0.5), rgba(150, 230, 161, 0.5));
                border-radius: 10px;
                }
                  @media(max-width: 991px){
                      .pwa_pdf_course_swap{
                        display: flex;
                        flex-direction: column-reverse;
                      }
                     .pdf_view_section{
                          height:650px;
                          overflow: hidden;
                      }
                  }
                 @media(max-width: 765px){

                    .pwa_content_view_btn_section{
                    padding: 4px 11px;
                    font-size: 14px;
                }
             .pwa_content_view_btn_section_icon{
                    display:none;
             }
                     .view_all_banner{
                        height:auto;
                        width:100%;
                        background: #FFFFFF;
                        background: -webkit-linear-gradient(to left, rgba(212, 252, 121, 0.5), rgba(150, 230, 161, 0.5));  background: linear-gradient(to top, rgba(212, 252, 121, 0.5), rgba(150, 230, 161, 0.5))
                        }

                    .view_all_view_head{
                     font-size: 27px;
                    }
                }
                @media (max-width: 525px){
             .pwa_view_content_view_badge_btn1{
                padding: 4px 9px;
                font-size: 13px;
             }
                 .view_all_banner_sub {
                        font-size: 17px;
                    }

                 }
                @media (max-width: 360px){
                        .pwa_content_view_play_btn {
                            margin: -10px -15px;
                        }
                        .view_all_view_head {
                            font-size: 24px;
                        }
                        .view_all_banner_sub{
                        font-size: 12px;
                        }


                .pwa_all_course_view_sub_head{
                        white-space: nowrap;
                        width: 109px;
                        overflow: hidden;
                        text-overflow: ellipsis;
                        height: 17px;
                    }


                }
              @media (max-width: 330px){
             .pwa_content_view_Completion_status_msg{
             font-size: 13px;
             }
             .pwa_view_content_view_badge_btn1 {
                padding: 4px 9px;
                font-size: 10px;
            }
                    .pwa_content_view_btn_section {
                    padding: 4px 8px;
                    font-size: 10px;
                }

             }

                @media (max-width: 320px){
                .view_all_view_head {
                    font-size: 17px;
                }
                 .view_all_banner_sub{
                font-size: 9px;
                }

                }
             @media (max-width: 301px)

             }
      </style>
    <div id="wrap" class="oe_structure oe_empty">
     <div class="container">
        <div class="view_all_banner">
                    <div class="d-flex justify-content-between">
                        <div class="display-4 ml-2">
                          <h1 class="view_all_view_head mt-4" style=""><span t-esc="slide.name"/></h1>
                        </div>
                       
                        <div class="mr-2">
                        	<form role="form" t-att-action="'/share/user/pwa/slide/%s' % (slide.id)" method="post">
								<input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
								<div class="body">
									<input type="hidden" name="course_id" t-att-value="slide.channel_id.id" id="course_id"
									class="form-control" invisibe="1"/>
									<t t-if ="users_details"> 
										<select name="usr_detail_id" id="select_user_id2" >
			                              <option value="">User</option>
			                              <t t-foreach="users_details" t-as="user_detail_id">
			                              <option t-att-value="user_detail_id" id="user_detail_id2">
			                                  <t t-esc="user_detail_id.name"/>
			                              </option>
			                              </t>
			                          </select>
			                          <button type="send" style="width: auto;height: 48px;margin-left: 0px;margin-top: -4px;" class="btn btn-primary">Share</button>
		                          </t> 
		                          
								</div>
							</form>
                        
                        </div>
                    </div>
                     
                      <div class="d-flex">
                      	<t t-if ="slide.lesson_open_date">
	                       <p class="ml-2">
	                            <font class="view_all_banner_sub">Started : <span t-esc="slide.lesson_open_date.date()"></span></font>
	                          </p>
                          </t>
                          <t t-if ="slide.lesson_open_date and slide.lesson_close_date">
	                          <p class="ml-2">
	                            <font style="font-size: 18px;">&amp;nbsp; | &amp;nbsp;</font>
	                          </p>
                          </t>
                          <t t-if ="slide.lesson_close_date">
	                          <p class="ml-2">
	                            <font class="view_all_banner_sub">Ended : <span t-esc="slide.lesson_close_date.date()"></span></font>
	                          </p>
                          </t>
                      </div>
                    <div class="pwa_view_content_view_badge_btn">
                        <button class="btn btn-primary pwa_view_content_view_badge_btn1" style="">View Badge</button>
                    </div>
        </div>
      </div>
      <div class="container">
      
        <div class="shadow p-3 mb-5 bg-white rounded">
        	
          <p class="pwa_content_view_Completion_status_msg">Watch all content or score a <strong>minimum 65%</strong> on a test to complete the courses</p>
          <p class="text-primary">Completion Status</p>
          <div t-if="not is_public_user" class="d-flex align-items-center">
                          <t t-if="slide.channel_id.completed">
                              <span class="badge badge-pill badge-success py-1 px-2" style="font-size: 1em"><i class="fa fa-check"/> Completed</span>
                          </t>
                          <t t-else="">
                              <div class="progress flex-grow-1 bg-black-50" style="height: 10px;">
                                  <div class="progress-bar" role="progressbar" t-attf-style="width: #{slide.channel_id.completion}%" t-att-aria-valuenow="slide.channel_id.completion" aria-valuemin="0" aria-valuemax="100"></div>
                              </div>
                              <div class="ml-3 small">
                                  <span class="o_wslides_progress_percentage" t-esc="slide.channel_id.completion"/> %
                              </div>
                              <span class="btn btn-primary" style="margin-left: 28px;">Take test</span>
                          </t>
          </div>
      </div>
      </div>
    </div>
    <div class="container mb-5">
      <div class="row pwa_pdf_course_swap">
        <div class="col-lg-3 col-12">
          <div class="col-12 bg-200" style="height:650px;overflow:scroll">
                     <t t-foreach="slide.channel_id.slide_ids" t-as="slide_val">
                      <div class="row shadow rounded bg-200">
                                          <div class="col-2 pt32">
                                    <img style="" src="/ecom_lms/static/src/img/ecom_pwa_check_img.png" alt="" loading="lazy"/>
                                  </div>
                                  <div class="col-10 pt32">
                                      <div>
                                            <p style="font-size: 15px;">
                                            <t t-if="not channel_progress[slide_val.id].get('completed')">
                                              Watched
                                             </t>
                                            </p>
                                            <h3 class="pwa_pdf_view_course_head">
                                              <font style="font-size: 18px;">
                                                      <t t-if="slide_val.slide_type and not slide.is_category">
                                                        <a t-if="slide_val.is_preview or slide_val.channel_id.is_member or slide_val.channel_id.can_publish" class="o_wslides_js_slides_list_slide_link" t-attf-href="/pwa/slides/slide/#{slug(slide_val)}">
                                                            <span t-field="slide_val.name"/>
                                                        </a>
                                                        <span t-else="">
                                                              <span t-esc="slide_val.name"/>
                                                        </span>
                                                    </t>
                                                    <t t-else="">
                                                        <span t-esc="slide_val.name"/>
                                                    </t>
                                              </font>
                                            </h3>
                                            <p class="card-text"><small t-if="slide_val.completion_time" class="font-weight-bold" t-esc="slide_val.completion_time" t-options="{'widget': 'duration', 'unit': 'hour', 'round': 'minute'}"/></p>
                                            <p style="text-align:end">
                                              <font style="font-size: 12px;">Last watch 2 days ago</font>
                                            </p>
                                          </div>
                                  </div>


                              <hr/>

                      </div>
                        </t>

        </div>
        </div>
        <div class="col-lg-9 col-12 pdf_view_section" style="">
          <div class="shadow p-3 mb-5 h-100 bg-white rounded">
          
          	<img t-if="slide.slide_type == 'infographic'"
	            t-att-src="website.image_url(slide, 'image_1024')" class="img-fluid" style="width:100%" t-att-alt="slide.name"/>
	        <div t-if="slide.slide_type in ('presentation', 'document')" class="embed-responsive embed-responsive-4by3 embed-responsive-item mb8" style="height: 600px;">
	            <t t-raw="slide.embed_code"/>
	        </div>
	        <div t-if="slide.slide_type == 'video' and slide.document_id" class="embed-responsive embed-responsive-16by9 embed-responsive-item mb8">
	            <t t-raw="slide.embed_code"/>
	        </div>
	        <div t-if="slide.slide_type == 'webpage'" class="bg-white p-3">
	            <div t-field="slide.html_content"/>
	        </div>
	        <div t-if="slide.slide_type == 'certification' and not channel_progress[slide.id].get('completed')" class="col mt32 mb8 d-flex justify-content-center">
                    <a role="button"
                        class="btn btn-primary btn-lg"
                        t-att-href="'/slides_survey/slide/get_certification_url?slide_id=%s' %(slide.id)">
                        <i class="fa fa-fw fa-graduation-cap" role="img"/>
                        <t t-if="slide.channel_id.is_member and slide.channel_id.active">Begin Certification</t>
                        <t t-else="">Test Certification</t>
                    </a>
                </div>
                <div t-if="slide.slide_type == 'certification' and channel_progress[slide.id].get('completed')" class="col mt32 mb8 d-flex justify-content-center">
                    <a role="button" class="btn btn-primary btn-lg" t-att-href="'/survey/%s/get_certification' % slide.survey_id.id">
                        <i class="fa fa-fw fa-trophy" role="img" aria-label="Download certification" title="Download certification"/> Download certification
                    </a>
                </div>
                
                <div class="o_wslides_js_quiz_container" t-att-data-slide-id="slide.id">
		        <div class="row" t-if="slide.slide_type != 'certification'">
		            <t t-if="slide.question_ids">
		                <t t-call="website_slides.lesson_content_quiz"/>
		            </t>
		            <div t-else="" class="o_wslides_js_lesson_quiz col" t-att-data-id="slide.id">
		                <t t-if="slide.channel_id.can_upload" t-call="website_slides.lesson_content_quiz_add_buttons"/>
		            </div>
                    <button  role="button" title="Check answers" aria-label="Check answers"
                        class="btn btn-primary text-uppercase font-weight-bold o_wslides_js_lesson_quiz_submit">Check your answers</button>
		        </div>
		    </div>
                
            
          
          </div>
        </div>
      </div>
    </div>
  </t>
</t>

    </template>
</odoo>