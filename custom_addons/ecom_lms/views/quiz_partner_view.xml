<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="independent_quiz_partner_view_search" model="ir.ui.view">
            <field name="name">quiz.partner.search</field>
            <field name="model">quiz.partner</field>
            <field name="arch" type="xml">
                <search string="Quiz Member">
                    <field name="partner_id"/>
                    <field name="partner_email"/>
                    <field name="quiz_id"/>
                </search>
            </field>
        </record>

        <record id="independent_partner_action" model="ir.actions.act_window">
            <field name="name">Attendees</field>
            <field name="res_model">quiz.partner</field>
            <field name="view_mode">tree</field>
            <field name="search_view_id" ref="independent_quiz_partner_view_search"/>
        </record>

        <record id="independent_partner_view_tree" model="ir.ui.view">
            <field name="name">quiz.partner.tree</field>
            <field name="model">quiz.partner</field>
            <field name="arch" type="xml">
                <tree string="Attendees" editable="top">
                    <field name="create_date"/>
                    <field name="partner_id" string="Contact"/>
                    <field name="partner_email"/>
                    <field name="quiz_id" string="Quiz" invisible="context.get('default_quiz_id',False)" />
<!--                    <field name="journey_completion" string="Progress" widget="progressbar" />-->
<!--                    <field name="journey_completed" string="Completed" invisible="1"/>-->
<!--                    <field name="journey_completed_mail" string="Completed"  invisible="1"/>-->
<!--                     <field name="journey_complete_date" string="Date"  invisible="1" />-->
                    <button name="unlink" title="Remove" icon="fa-times" type="object"/> 
                </tree>
            </field>
        </record>

        <record id="independent_partner_action" model="ir.actions.act_window">
            <field name="name">Attendees</field>
            <field name="res_model">quiz.partner</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
