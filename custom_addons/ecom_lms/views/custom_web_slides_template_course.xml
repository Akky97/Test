<odoo>
    <data>
        <template id="custom_inherit_web_slides_template_course"
                  inherit_id="website_slides.course_sidebar">
            <xpath expr="//table[@class='table table-sm mt-3']//tr[2]" position="after">
                <tr>
                    <th class="border-top-0">Start Date</th>
                    <td class="border-top-0"><t t-esc="channel.course_open_date" t-options="{'widget': 'date'}"/></td>
                </tr>
                <tr>
                    <th class="border-top-0">Close Date</th>
                    <td class="border-top-0"><t t-esc="channel.course_close_date" t-options="{'widget': 'date'}"/></td>
                </tr>
                
                <tr t-if="time_left_value">
                    <th class="border-top-0">Time Left</th>
                    <td class="border-top-0"><t class="font-weight-bold" t-esc="time_left_value" t-options="{'widget': 'duration', 'unit': 'hour', 'round': 'minute'}"/></td>
                </tr>
            </xpath>
            <xpath expr="//button[@class='d-flex align-items-center alert my-0 px-2 px-xl-3 bg-100 w-100 o_wslides_js_channel_unsubscribe']" position='replace'>
                    <t t-if="not channel.completion == 100">
                    <button class="d-flex align-items-center alert my-0 px-2 px-xl-3 bg-100 w-100 o_wslides_js_channel_unsubscribe"
                            t-att-data-channel-id="channel.id"
                            t-att-data-is-follower="channel.message_is_follower"
                            t-att-data-enroll="channel.enroll">
                        <t t-call="website_slides.slides_misc_user_image">
                            <t t-set="img_class" t-value="'rounded-circle mr-1'"/>
                            <t t-set="img_style" t-value="'width: 1.4em; height: 1.4em; object-fit: cover;'"/>
                        </t>
                        <h6 class="d-flex flex-grow-1 my-0">You're enrolled</h6>
                        <i class="fa fa-check"/>
                        <i class="fa fa-times"/>
                    </button>
                     </t>
            </xpath>
            
            <xpath expr="//button[@class='btn btn-link btn-block']" position='replace'>
                    <button role="button" class="btn btn-link btn-block ecom_share" title="Share Channel" style="display:none;"
                    aria-label="Share Channel"
                    data-toggle="modal" t-att-data-target="'#slideChannelShareModal_%s' % channel.id">
                    <i class="fa fa-share-square fa-fw"/> Share
                  </button>	
            </xpath>
            
        </template>



