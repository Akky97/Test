        <template id="assets_frontend" inherit_id="website_slides.assets_frontend">
            <xpath expr="." position="inside">
               <script type="text/javascript" src="/ecom_lms/static/src/js/ecom_frontend.js"/>
           </xpath>
        </template>


        <template id="custom_onclick_template" inherit_id="website_slides.course_slides_list">
            <xpath expr="//div[@class='mb-5 o_wslides_slides_list']" position="inside">
               <style>
                        ul.list-unstyled.pb-1.border-top.ui-sortable li:nth-child(3) a {
                            pointer-events:auto !important;
                        }
                         ul.list-unstyled.pb-1.border-top.ui-sortable li a {
                            pointer-events:none !important;
                        }
                    </style>
           </xpath>
        </template>

         <template id="custom_full_template" inherit_id="website_slides.slide_fullscreen">
            <xpath expr="//div[@class='o_wslides_fs_sidebar_content d-flex flex-column px-3 pt-3 h-100']" position="inside">

                          <style>
                      .o_wslides_fs_sidebar_content.d-flex.flex-column.px-3.pt-3.h-100 a {
    pointer-events: none !important;
}

                    </style>
           </xpath>
        </template>


          <template id="custom_fullsecond_template" inherit_id="website_slides.slide_aside_training">
            <xpath expr="//div[@class='o_wslides_lesson_aside_list position-relative bg-white border-bottom mt-4']" position="inside">

                    <style>
        .o_wslides_lesson_aside_list.position-relative.bg-white.border-bottom.mt-4 a {
    pointer-events: none !important;
}

    </style>
           </xpath>
        </template>
        
        
        
        
        <template id="custom_slide_main_ecom_inherit" inherit_id="website_slides.slide_main">
            <xpath expr="//h2[@class='font-weight-medium w-100']" position="after">
                    <form role="form" t-att-action="'/share/user/slide/%s' % (slide.id)" method="post">
						<input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
						<div class="body">
							
							<input type="hidden" name="course_id" t-att-value="slide.channel_id.id" id="course_id"
							class="form-control" invisibe="1"/>
							<t t-if ="users_details">
								<select name="usr_detail_id" id="select_user_id2" style="width: 217px;height: 48px;border: none;background-color: white;">
	                              <option value="">User</option>
	                              <t t-foreach="users_details" t-as="user_detail_id">
	                              <option t-att-value="user_detail_id" id="user_detail_id2">
	                                  <t t-esc="user_detail_id.name"/>
	                                  <!-- <t t-set="multi_upload" t-value="course_id"/> -->
	                              </option>
	
	                              </t>
	                          </select>
	                          <button type="send" style="width: auto;height: 48px;margin-left: 0px;margin-top: -4px;" class="btn btn-primary">Share</button>
                          </t>
                          
						</div>
					</form>
            </xpath>
         </template>
        
        

         <template id="custom_fullthird_template" inherit_id="website_slides.slide_fullscreen">
            <xpath expr="//div[@class='o_wslides_fs_sidebar_content d-flex flex-column px-3 pt-3 h-100']" position="inside">
                 <style>
                        .o_wslides_fs_sidebar_content.d-flex.flex-column.px-3.pt-3.h-100 {
    pointer-events: none !important;
}
                    </style>
            </xpath>
            <xpath expr="//div[@class='d-flex']" position="replace">
                 <div class="d-flex">
                    <a class="o_wslides_fs_toggle_sidebar d-flex align-items-center px-3" href="#" title="Lessons">
                        <i class="fa fa-bars"/><span class="d-none d-md-inline-block ml-1">Lessons</span>
                    </a>
                    <a class="o_wslides_fs_review d-flex align-items-center px-3" t-att-href="slide.channel_id.website_url + '?active_tab=review'" title="Reviews" t-if="slide.channel_id.allow_comment">
                        <i class="fa fa-pencil"/><span class="d-none d-md-inline-block ml-1">Write a review</span>
                    </a>
                   <!--  <a class="o_wslides_fs_share d-flex align-items-center px-3" href="#" title="Share">
                        <i class="fa fa-share-alt"/><span class="d-none d-md-inline-block ml-1">Share</span>
                    </a> -->
                    
                    <form role="form" t-att-action="'/share/user/fullscreen/slide/%s' % (slide.id)" method="post">
								<input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
								<div class="body">
									
									<input type="hidden" name="course_id" t-att-value="slide.channel_id.id" id="course_id"
									class="form-control" invisibe="1"/>
									<t t-if ="users_details">
										<select name="usr_detail_full_id" id="select_user_full_id2" style="width: 217px;height: 48px;border: none;background-color: white;">
				                              <option value="">User</option>
				                              <t t-foreach="users_details" t-as="usr_detail_full_id">
				                              <option t-att-value="usr_detail_full_id" id="user_detail_full_id2">
				                                  <t t-esc="usr_detail_full_id.name"/>
				                                  <!-- <t t-set="multi_upload" t-value="course_id"/> -->
				                              </option>
				
				                              </t>
				                          </select>
			                          	<button type="send" style="width: auto;height: 48px;" class="btn btn-primary pull-right">Share</button>
			                          
		                          </t>
		                          
								</div>
							</form>
                    
                    
                    
                </div>
            </xpath>
         </template>


        <template id="custom_content_web" inherit_id="website_slides.slide_content_detailed">
            <xpath expr="//div[@class='btn-group flex-grow-1 flex-sm-0']" position="replace">
                <div class="btn-group flex-grow-1 flex-sm-0" role="group" aria-label="Lesson Nav">
                <a t-att-class="'btn btn-light border %s' % ('disabled' if not previous_slide else '')"
                    role="button" t-att-aria-disabled="'disabled' if not previous_slide else None"
                    t-att-href="'/slides/slide/%s' % (slug(previous_slide)) if previous_slide else '#'">
                    <i class="fa fa-chevron-left mr-2"></i> <span class="d-none d-sm-inline-block">Prev</span>
                </a>
                <t t-set="allow_done_btn" t-value="slide.slide_type in ['infographic', 'presentation', 'document', 'webpage', 'video'] and not slide.question_ids and not channel_progress[slide.id].get('completed') and slide.channel_id.is_member"/>
                <a t-att-class="'btn btn-primary border text-white %s' % ('disabled' if not allow_done_btn else '')"
                    role="button" t-att-aria-disabled="'true' if not allow_done_btn else None"
                    t-att-href="'/slides/slide/%s/set_completed?%s' % (slide.id, 'next_slide_id=%s' % (next_slide.id) if next_slide else '') if allow_done_btn else '#'">
                    Set Done
                </a>
                <t t-set="allow_done_btn" t-value="slide.slide_type in ['infographic', 'presentation', 'document', 'webpage', 'video'] and not slide.question_ids and not channel_progress[slide.id].get('completed') and slide.channel_id.is_member"/>
                <a t-att-class="'btn btn-light border %s' % ('disabled' if allow_done_btn else '')"
                    role="button" t-att-aria-disabled="'disabled' if allow_done_btn else None"
                    t-att-href="'/slides/slide/%s' % (slug(next_slide)) if next_slide else '#'">
                    <span class="d-none d-sm-inline-block">Next</span> <i class="fa fa-chevron-right ml-2"></i>
                </a>
            </div>
            </xpath>
            
            <xpath expr="//div[@class='embed-responsive embed-responsive-16by9 embed-responsive-item mb8']" position="replace">
            	<div t-if="slide.slide_type == 'video' " class="embed-responsive embed-responsive-16by9 embed-responsive-item mb8">
	            	<t t-raw="slide.embed_code_val"/>
		        </div>
	        </xpath>

            <xpath expr="//div[hasclass('o_wslides_lesson_content_type')]" position="inside">
                <t t-if="slide.live_session == 'yes'">
                <div class="bg-white p-3">
                    <h2>Live Session Url</h2>
                        <a t-att-href="slide.live_url" t-esc="slide.name"/><br/>
                </div>
                </t>
            </xpath>


        </template>
    </data>
</odoo>