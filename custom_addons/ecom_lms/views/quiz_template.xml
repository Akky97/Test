<odoo>

<template id='quiz_card' name="Quiz Card">
    <div t-attf-class="card w-100 o_wslides_course_card mb-4">
    	<t t-set="q_image" t-value="website.image_url(quizzes, 'quiz_image')"/>
        <a t-attf-href="/quizzes/#{slug(quizzes)}" t-title="quizzes.name">
        <div t-if="quizzes.quiz_image" class="card-img-top" t-attf-style="padding-top: 50%; background-image: url(#{q_image}); background-size: cover; background-position:center"/>
        <div t-else="" class="o_wslides_gradient card-img-top position-relative" style="padding-top: 50%; opacity: 0.8">
                <i class="fa fa-graduation-cap fa-2x mr-3 mb-3 position-absolute text-white-75" style="right:0; bottom: 0"/>
            </div>
        </a>
        <div class="card-body p-3">
            <a class="card-title h5 mb-2 o_wslides_desc_truncate_2" t-attf-href="/quizzes/#{slug(quizzes)}" t-esc="quizzes.name"/>
            <div class="card-text mt-1">
                <div class="font-weight-light o_wslides_desc_truncate_3" t-field="quizzes.description_short"/>
            </div>


