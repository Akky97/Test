        <record id="customer_thanks" model="website.page">
			<field name="name">Thanks</field>
			<field name="type">qweb</field>
			<field name="url">customer-thank-you</field>
			<field name="website_published">True</field>
			<field name="key">ecom_lms.customer_thanks</field>
			<field name="arch" type="xml">
				<t name="Thanks" t-name="ecom_lms.customer_thanks">
					<t t-call="website.layout">
						<div id="wrap">
							<div class="container">
                                <br/>
								<h1>Thanks!!!</h1>
                                <br/>
								<div class="row">
									<div class="col-lg-8">
										<div class="alert alert-success" role="status">
											Your Mail Has Been Sent Successfully.
										</div>
										<p>
											from Ecom Express.
										</p>
									</div>
								</div>
								<div>
								<t t-if="recommend_user_name_exist_lst">
									<span><strong>This course is already recommended to the below users</strong>
										<br/>
										<br/>
										<t t-foreach="recommend_user_name_exist_lst" t-as="user">
											<ul>
												<li><t t-esc="user"/></li>
											</ul>
										</t>
									</span>
									</t>
								</div>
							</div>
						</div>
					</t>
				</t>
			</field>
		</record>
