<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="course_language_form_view" model="ir.ui.view">
        <field name="name">course_language.form</field>
        <field name="model">course.lang</field>
        <field name="arch" type="xml">
            <form string="Select Course language">
                <sheet>
                    <group string="Language Details">
                        <group>
                            <field name="name"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="course_language_tree_view" model="ir.ui.view">
        <field name="name">course_language.tree</field>
        <field name="model">course.lang</field>
        <field name="arch" type="xml">
            <tree string="Course Language Tree">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="course_language_action" model="ir.actions.act_window">
        <field name="name">Enter Course language</field>
        <field name="res_model">course.lang</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p>
                Enter Course language.
            </p>
        </field>
    </record>

    <menuitem id="course_language_root" name="Course Language" action="course_language_action"
              parent="website_slides.website_slides_menu_configuration" sequence="5"/>
</odoo>