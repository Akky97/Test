<odoo>

	<template id="ecom_auth_signup_user_login" inherit_id="auth_signup.login" name="User Login">
           <xpath expr="//div[@class='justify-content-between mt-2 d-flex small']" position="replace">
           		<div class="justify-content-between mt-2 d-flex small">
                    <div t-if="(request.uid !=  %(base.public_user)d)">
                        <a t-if="signup_enabled" t-attf-href="/web/signup?{{ keep_query() }}">Don't have an account?</a>
                    </div>
                        <a t-if="reset_password_enabled" t-attf-href="/web/reset_password?{{ keep_query() }}">Forgot Password</a>
                </div>
            </xpath>
        </template>
        
	<template id="ecom_user_login" inherit_id="web.login" name="User Login">
           <xpath expr="//div[@class='form-group field-login']" position="replace">
                <label for="login">User Code</label>
                <input type="text" placeholder="User Code" name="login" t-att-value="login" id="login" t-attf-class="form-control #{'form-control-sm' if form_small else ''}" required="required" autofocus="autofocus" autocapitalize="off"/>
            </xpath>
        </template>

    </odoo>