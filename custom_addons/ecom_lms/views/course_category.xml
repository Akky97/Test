<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="course_category_form_view" model="ir.ui.view">
        <field name="name">course_category.form</field>
        <field name="model">course.category</field>
        <field name="arch" type="xml">
            <form string="Course Category">
                <sheet>
                    <group string="Category Details">
                        <group>
                            <field name="name"/>
                            <field name="parent_id"/>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="course_category_tree_view" model="ir.ui.view">
        <field name="name">course_category.tree</field>
        <field name="model">course.category</field>
        <field name="arch" type="xml">
            <tree string="Course Category Tree">
                <field name="name"/>
                <field name="parent_id"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="course_category_action" model="ir.actions.act_window">
        <field name="name">Enter Course Category</field>
        <field name="res_model">course.category</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p>
                Enter Course Category.
            </p>
        </field>
    </record>

    <menuitem id="course_category_root" name="Course Categories" action="course_category_action"
              parent="website_slides.website_slides_menu_configuration" sequence="4"/>
</odoo>