<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_res_form_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.inherited</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="auth_signup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='access_rights']" position="after">
                <div class="col-12 col-lg-6 o_setting_box" id="enable_password_reset">
                    <div class="o_setting_left_pane">
                        <field name="show_terms_of_services"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label string="Privacy" for="show_terms_of_services"/>
                        <div class="text-muted">
                            Enable password reset from Login page
                        </div>
                    </div>
                </div>

                <div class="col-12 col-lg-6 o_setting_box" id="enable_password_reset">
                    <div class="o_setting_left_pane">
                        <field name="show_terms_of_services_and_privacy"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label string="Privacy Policy" for="show_terms_of_services"/>
                        <div class="text-muted">
                            Enable password reset from Login page
                        </div>
                    </div>
                </div>

            </xpath>
        </field>
    </record>

</odoo>