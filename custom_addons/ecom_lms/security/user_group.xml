<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

        <record id="ecom_rule_slide_channel_partner_officer" model="ir.rule">
            <field name="name">Channel Partner: officer: create/write/only</field>
            <field name="model_id" ref="model_slide_channel_partner"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('ecom_lms.regional_admin_user_group'))]"/>
            <field name="perm_unlink" eval="0"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_create" eval="1"/>
        </record>


        <record id="upload_or_delete_users_group" model="res.groups">
            <field name="name">Upload or Delete Users</field>
        </record>


        <record id="users_group" model="res.groups">
            <field name="name">Users</field>
        </record>

        <record model="res.users.role" id="users_role">
            <field name="name">Users</field>
            <field name="implied_ids" eval="[(4, ref('base.group_portal')),(4, ref('ecom_lms.users_group'))]"/>
        </record>

        <record id="user_rule" model="ir.rule">
            <field name="name">User Rule</field>
            <field ref="model_slide_channel" name="model_id"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups"  eval="[(6, 0, [ref('users_group')])]"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_read" eval="1"/>
        </record>


        <record id="trainer_user_group" model="res.groups">
            <field name="name">Trainer</field>
        </record>

        <record model="res.users.role" id="trainer_user_role">
            <field name="name">Trainer</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user')),
            (4, ref('website_slides.group_website_slides_officer')),
            (4, ref('survey.group_survey_user')),
            (4, ref('ecom_lms.trainer_user_group'))]"/>
        </record>


        <record id="trainer_rule" model="ir.rule">
            <field name="name">Trainer Rule</field>
            <field ref="model_slide_channel" name="model_id"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups"  eval="[(6, 0, [ref('trainer_user_group')])]"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="0"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_read" eval="1"/>
        </record>

        <record id="regional_admin_user_group" model="res.groups">
            <field name="name">Regional Admin</field>
        </record>

        <record model="res.users.role" id="regional_admin_user_role">
            <field name="name">Regional Admin</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user')),
            (4, ref('survey.group_survey_user')),
            (4, ref('base.group_allow_export')),
            (4, ref('website_slides.group_website_slides_officer')),
            (4, ref('ecom_lms.regional_admin_user_group'))]"/>
        </record>

        <record id="regional_admin_user_rule" model="ir.rule">
            <field name="name">Regional Admin Rule</field>
            <field ref="model_slide_channel" name="model_id"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups"  eval="[(6, 0, [ref('regional_admin_user_group')])]"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="0"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_read" eval="1"/>
        </record>

        <record id="admin_user_group" model="res.groups">
            <field name="name">Admin</field>
        </record>

        <record model="res.users.role" id="admin_user_role">
            <field name="name">Admin</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user')),
            (4, ref('base.group_partner_manager')),
            (4, ref('base.group_allow_export')),
            (4, ref('ecom_lms.upload_or_delete_users_group')),
            (4, ref('survey.group_survey_user')),
            (4, ref('website_slides.group_website_slides_officer')),
            (4, ref('ecom_lms.regional_admin_user_group')),
            (4, ref('ecom_lms.admin_user_group'))]"/>
        </record>

        <record id="admin_user_rule" model="ir.rule">
            <field name="name">Admin Rule</field>
            <field ref="model_slide_channel" name="model_id"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups"  eval="[(6, 0, [ref('admin_user_group')])]"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="0"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_read" eval="1"/>
        </record>


        <record id="super_admin_group" model="res.groups">
            <field name="name">Super Admin</field>
        </record>


