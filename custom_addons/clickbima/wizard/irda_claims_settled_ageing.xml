<?xml version="1.0"?>
<odoo>
        <record id="irda_settled_form" model="ir.ui.view">
            <field name="name">irda.settled.wizard</field>
            <field name="model">irdasettled.report</field>
            <field name="arch" type="xml">
<!--                <style>-->
<!--                    .o_form_view .o_group .o_form_field-->
<!--                    {-->
<!--                        width: 22% !important;-->
<!--                    }-->
<!--                    .o_form_view .o_group.o_inner_group-->
<!--                    {-->
<!--                        margin-left: 45px !important;-->
<!--                    }-->
<!--                </style>-->
                <form string="Generate Report">
                    <header style="text-align:center;"><h2>IRDA Claims Settled Ageing Report</h2></header>
                    <group>
                        <field name="fiscal_year" options="{'no_create': True, 'no_create_edit':True}" />
                        <field name="monthly" widget="radio" options="{'horizontal': true}" />
                        <field name="quarter" placeholder="Please select Quarter" attrs="{'invisible':[('monthly','=','yearly')],'required':[('monthly','=','quatar')]}"/>
                        <field name="date_from" />
                        <field name="date_to" />
                    </group>
                    <footer>
                        <button name="generate_xlsx_report" string="Print" type="object" class="btn btn-sm btn-primary" default_focus="1"/>
                        <button string="Cancel" class="btn btn-sm btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="irda_settled_wizard" model="ir.actions.act_window">
            <field name="name">Print Excel</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">irdasettled.report</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="irda_settled_form"/>
            <field name="target">new</field>
        </record>

       <menuitem name="IRDA Claims Settled Report" id="irda_settled21" parent="clickbima.menu_19" action="irda_settled_wizard" sequence="10" />
</odoo>
