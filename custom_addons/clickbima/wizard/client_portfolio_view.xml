<?xml version="1.0"?>
<odoo>
        <record id="clientportfolio_form" model="ir.ui.view">
            <field name="name">businessdetail.report.wizard</field>
            <field name="model">clientportfolio.report</field>
            <field name="arch" type="xml">
                <form string="Generate Report">
<!--                    <style>-->
<!--                    .o_form_view .o_group .o_form_field-->
<!--                    {-->
<!--                        width: 22% !important;-->
<!--                    }-->
<!--                        .o_form_view .o_group.o_inner_group-->
<!--                    {-->
<!--                        margin-left: 45px !important;-->
<!--                    }-->
<!--                    </style>-->
                     <header style="text-align:center;"><h2>Client portfolio</h2></header>
                            <group>

                                <field name="fiscal_year" options="{'no_create': True, 'no_create_edit':True}" />
                                <field name="location" placeholder="Please select Location" />
                                <field name="monthly" widget="radio" options="{'horizontal': true}" />
                                <field name="months" placeholder="Please select Month" attrs="{'invisible':['|',('monthly','=','quatar'),('monthly','=','yearly')],'required':[('monthly','=','monthly')]}"/>
                                <field name="quarter" placeholder="Please select Quarter" attrs="{'invisible':['|',('monthly','=','monthly'),('monthly','=','yearly')],'required':[('monthly','=','quatar')]}"/>
                                <field name="date_from" />
                                <field name="date_to" />
                                <field name="groupby" placeholder="Please select Group By"/>
                                <field name="filterby" placeholder="Please select Filter By"/>
                                <field name="insurer_name" placeholder="Please select Insurer Name" options="{'no_create': True, 'no_create_edit':True}" attrs="{'invisible':['|','|','|','|','|','|','|',('filterby','=','individual_client'),('filterby', '=','all'),('filterby', '=',False),('filterby','=','internal_reference'),('filterby','=','individual_group'),('filterby','=','true'),('filterby','=','false'),('filterby','=','all')],'required':['|',('filterby','=','insurername'),('filterby','=','insurerbranch')]}"/>
                                <field name="insurer_branch" placeholder="Please select Insurer Branch" options="{ 'no_create': True, 'no_create_edit':True}" attrs="{'invisible':['|','|','|','|','|','|','|',('filterby','=','individual_client'),('filterby', '=','all'),('filterby', '=',False),('filterby', '=','insurername'),('filterby','=','internal_reference'),('filterby','=','individual_group'),('filterby','=','true'),('filterby','=','false')],'required':[('filterby','=','insurerbranch')]}"/>
                             <field name="client_name"  options="{'no_create': True, 'no_create_edit':True}" placeholder="Please select Client" attrs="{'invisible':['|','|','|','|','|','|','|','|','|',('filterby','=','insurername'),('filterby','=','insurerbranch'),('filterby','=','insurername'),('filterby','=','insurerbranch'),('filterby','=','internal_reference'),('filterby','=','individual_group'),('filterby','=','true'),('filterby','=','false'),('filterby','=','all')]}"/>
                        <field name="group_name"  options="{'no_create': True, 'no_create_edit':True}" placeholder="Please select Group" attrs="{'invisible':['|','|','|','|','|','|','|','|',('filterby','=','insurername'),('filterby','=','insurerbranch'),('filterby','=','insurername'),('filterby','=','insurerbranch'),('filterby','=','internal_reference'),('filterby','=','individual_client'),('filterby','=','true'),('filterby','=','false'),('filterby','=','all')]}"/>
                        <field name="internal_reference"  options="{'no_create': True, 'no_create_edit':True}" placeholder="Please select Internal" attrs="{'invisible':['|','|','|','|','|','|','|','|','|','|',('filterby','=','insurername'),('filterby','=','insurerbranch'),('filterby','=','insurername'),('filterby','=','insurerbranch'),('filterby','=','individual_client'),('filterby','=','individual_group'),('filterby','=','true'),('filterby','=','all'),('filterby','=','false')]}"/>

                            </group>
                    <footer>
                        <button name="generate_xlsx_report" string="Print" type="object" class="btn btn-sm btn-primary" default_focus="1"/>
                        <button string="Cancel" class="btn btn-sm btn-default" special="cancel"/>
                    </footer>

                </form>
            </field>
        </record>

        <record id="clientportfolio_wizard" model="ir.actions.act_window">
            <field name="name">Print Excel</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">clientportfolio.report</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="clientportfolio_form"/>
            <field name="target">new</field>
        </record>

       <menuitem name="Client Portfolio Report" id="clientportfolio_9054" parent="clickbima.menu_19" action="clientportfolio_wizard" sequence="20"/>
</odoo>
