<?xml version="1.0"?>
<odoo>
        <record id="idra_general_business_form" model="ir.ui.view">
            <field name="name">idrageneralbusiness.report.wizard</field>
            <field name="model">idrageneralbusiness.report</field>
            <field name="arch" type="xml">
<!--                <style>-->
<!--                    .o_form_view .o_group .o_form_field-->
<!--                    {-->
<!--                        width: 22% !important;-->
<!--                    }-->
<!--                    .o_form_view .o_group.o_inner_group-->
<!--                    {-->
<!--                        margin-left: 45px !important;-->
<!--                    }-->
<!--                </style>-->
                <form string="Generate Report">
                     <header style="text-align:center;"><h2>IRDA General Business Report</h2></header>
                    <group>

                        <field name="fiscal_year" options="{'no_create': True, 'no_create_edit':True}" />
                        <field name="location" placeholder="Please select Location" />
                        <field name="monthly" widget="radio" options="{'horizontal': true}" />
                        <field name="months" placeholder="Please select Month" attrs="{'invisible':['|',('monthly','=','quatar'),('monthly','=','yearly')],'required':[('monthly','=','monthly')]}"/>
                        <field name="quarter" placeholder="Please select Quarter" attrs="{'invisible':['|',('monthly','=','monthly'),('monthly','=','yearly')],'required':[('monthly','=','quatar')]}"/>
                        <field name="date_from" />
                        <field name="date_to" />
                        <field name="groupby" placeholder="Please select Group By"/>
                        <field name="filterby" placeholder="Please select Filter By"/>
                        <field name="category" placeholder="Please select Category" options="{'no_create': True, 'no_create_edit':True}" attrs="{'invisible':['|',('filterby', '=',False),('filterby', '=','all')],'required':[('filterby','=','category')]}"/>
                    </group>
                    <footer>
                        <button name="generate_xlsx_report" string="Print" type="object" class="btn btn-sm btn-primary" default_focus="1"/>
                        <button string="Cancel" class="btn btn-sm btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="idra_general_business_wizard" model="ir.actions.act_window">
            <field name="name">Print Excel</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">idrageneralbusiness.report</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="idra_general_business_form"/>
            <field name="target">new</field>
        </record>

       <menuitem name="IRDA General Business Report" id="idrageneral_023" parent="clickbima.menu_19" action="idra_general_business_wizard" sequence="5" />
</odoo>
