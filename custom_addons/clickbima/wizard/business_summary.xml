<?xml version="1.0"?>
<odoo>
        <record id="businesssummary_form" model="ir.ui.view">
            <field name="name">businesssummary.report.wizard</field>
            <field name="model">businesssummary.report</field>
            <field name="arch" type="xml">
                <form string="Generate Report">
<!--                    <style>-->
<!--                    .o_form_view .o_group .o_form_field-->
<!--                    {-->
<!--                        width: 22% !important;-->
<!--                    }-->
<!--                        .o_form_view .o_group.o_inner_group-->
<!--                    {-->
<!--                        margin-left: 45px !important;-->
<!--                    }-->
<!--                    </style>-->
                     <header style="text-align:center;"><h2>Business Summary</h2></header>
                        <div class ="row">
                            <div class="col-md-5">
                                <group>

                                    <field name="fiscal_year" style="width: auto !important;" options="{'no_create': True, 'no_create_edit':True}" />
                                    <field name="location" placeholder="Please select Location"/>
                                    <field name="monthly" widget="radio" options="{'horizontal': true}" />
                                    <field name="months" placeholder="Please select Month" style="width: 75% !important;" attrs="{'invisible':['|',('monthly','=','quatar'),('monthly','=','yearly')],'required':[('monthly','=','monthly')]}"/>
                                    <field name="quarter" placeholder="Please select Quarter" style="width: 75% !important;" attrs="{'invisible':['|',('monthly','=','monthly'),('monthly','=','yearly')],'required':[('monthly','=','quatar')]}"/>
                                    <field name="date_from" />
                                    <field name="date_to" />
                                </group>
                            </div>
                            <div class="col-md-5">
                                <group>
                                    <field name="groupby" placeholder="Please select Group By" style="width: 100% !important;"/>
                                    <field name="filterby" placeholder="Please select Filter By" style="width: 100% !important;"/>
                                    <field name="insurer_name" placeholder="Please select Insurer Name" options="{'no_create': True, 'no_create_edit':True}" attrs="{'invisible':['|',('filterby','=','all'),('filterby', '=',False)],'required':[('filterby','=','insurername')]}"/>
<!--                                    <field name="insurer_branch" options="{'no_create': True, 'no_create_edit':True}" attrs="{'invisible':['|',('filterby', '=',False),('filterby', '=','insurername')]}"/>-->
                                </group>
                            </div>
                        </div>


                    <footer>
                        <button name="generate_xlsx_report" string="Print" type="object" class="btn btn-sm btn-primary" default_focus="1"/>
                        <button string="Cancel" class="btn btn-sm btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="businesssummary_wizard" model="ir.actions.act_window">
            <field name="name">Print Excel</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">businesssummary.report</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="businesssummary_form"/>
            <field name="target">new</field>
        </record>

       <menuitem name="Business Summary Report"  id="businesssummary_098" parent="clickbima.menu_19" action="businesssummary_wizard" sequence="4"/>
</odoo>
