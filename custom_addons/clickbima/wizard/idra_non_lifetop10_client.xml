                <form string="Generate Report">
                      <header style="text-align:center;"><h2>IRDA Non Life Top 10 Client Report</h2></header>
                    <group>
                        <field name="fiscal_year" options="{'no_create': True, 'no_create_edit':True}" />
                         <field name="location" placeholder="Please select Location" />
                        <field name="monthly" widget="radio" options="{'horizontal': true}" />
                        <field name="months" placeholder="Please select Month" attrs="{'invisible':['|',('monthly','=','quatar'),('monthly','=','yearly')],'required':[('monthly','=','monthly')]}"/>
                        <field name="quarter" placeholder="Please select Quarter" attrs="{'invisible':['|',('monthly','=','monthly'),('monthly','=','yearly')],'required':[('monthly','=','quatar')]}"/>
                        <field name="date_from" />
                        <field name="date_to" />
                        <field name="select_upto" placeholder="Please select no. of clients" />
                        <field name ="numbers" string="Upto"  attrs="{'invisible':[('select_upto','=','all')]}"/>
<!--                        <field name="groupby" placeholder="Please select Group By"/>-->
                        <field name="filterby" placeholder="Please select filter"/>
<!--                        <field name="category" placeholder="Please select Category" options="{'no_create': True, 'no_create_edit':True}" attrs="{'invisible':['|',('filterby', '=',False),('filterby', '=','all')],'required':[('filterby','=','category')]}"/>-->
<!--                        <field name="client_name" placeholder="Please select Client" options="{'no_create': True, 'no_create_edit':True}" attrs="{'invisible':['|',('filterby', '=',False),('filterby', '=','individual')],'required':[('filterby','=','client')]}"/>-->
<!--                        <field name="group_name" placeholder="Group Name"  attrs="{'invisible':['|','|',('filterby', '=',False),('filterby', '=','false'),('filterby', '=','true')]}"/>-->
                    </group>
                    <footer>
                        <button name="test_report2" string="Print" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn btn-sm btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="idraclient_wizard" model="ir.actions.act_window">
            <field name="name">Print Excel</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">idraclient.report</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="idraclient_form"/>
            <field name="target">new</field>
        </record>

       <menuitem name="IRDA Non Life Top 10 Client Report" id="idraclient_9807" parent="clickbima.menu_19" action="idraclient_wizard" sequence="7" />
