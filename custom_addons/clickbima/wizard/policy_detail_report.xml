<?xml version="1.0"?>
<odoo>
        <record id="policy_detail_form" model="ir.ui.view">
            <field name="name">policy.detail.wizard</field>
            <field name="model">policydetail.report</field>
            <field name="arch" type="xml">
<!--                <style>-->
<!--                    .o_form_view .o_group .o_form_field-->
<!--                    {-->
<!--                        width: 22% !important;-->
<!--                    }-->
<!--                    .o_form_view .o_group.o_inner_group-->
<!--                    {-->
<!--                        margin-left: 45px !important;-->
<!--                    }-->
<!--                </style>-->
                <form string="Generate Report">
                    <header style="text-align:center;"><h2>Policy Detail Report</h2></header>
                    <group>
                        <field name="fiscal_year" options="{'no_create': True, 'no_create_edit':True}" />
                        <field name="monthly" widget="radio" options="{'horizontal': true}" />
                        <field name="months" placeholder="Please select Month" attrs="{'invisible':['|',('monthly','=','quatar'),('monthly','=','yearly')],'required':[('monthly','=','monthly')]}"/>
                        <field name="quarter" placeholder="Please select Quarter" attrs="{'invisible':['|',('monthly','=','monthly'),('monthly','=','yearly')],'required':[('monthly','=','quatar')]}"/>
                        <field name="date_from" />
                        <field name="date_to" />
                        <field name="groupby" placeholder="Please select Group By"/>
                        <field name="filterby" placeholder="Please select Filter By"/>
                        <field name="client_name"  options="{'no_create': True, 'no_create_edit':True}" placeholder="Please select Client" attrs="{'invisible':['|','|',('filterby','=','group'),('filterby','=',False),('filterby','=','all')],'required':[('filterby','=','client')]}"/>
                        <field name="group_name"  options="{'no_create': True, 'no_create_edit':True}" placeholder="Please select Group" attrs="{'invisible':['|','|',('filterby','=','client'),('filterby','=',False),('filterby','=','all')],'required':[('filterby','=','group')]}"/>
                    </group>
                    <footer>
                        <button name="generate_xlsx_report" string="Print" type="object" class="btn btn-sm btn-primary" default_focus="1"/>
                        <button string="Cancel" class="btn btn-sm btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="policy_detail_wizard" model="ir.actions.act_window">
            <field name="name">Print Excel</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">policydetail.report</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="policy_detail_form"/>
            <field name="target">new</field>
        </record>

       <menuitem name="Policy Detail Report" id="policy_detail31" parent="clickbima.menu_19" action="policy_detail_wizard" sequence="25" />
</odoo>
