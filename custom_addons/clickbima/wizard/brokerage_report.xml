<?xml version="1.0"?>
<odoo>
        <record id="brokerage_form" model="ir.ui.view">
            <field name="name">brokeragereport.report.wizard</field>
            <field name="model">brokeragereport.report</field>
            <field name="arch" type="xml">
                <form string="Generate Report">
<!--                    <style>-->
<!--                    .o_form_view .o_group .o_form_field-->
<!--                    {-->
<!--                        width: 22% !important;-->
<!--                    }-->
<!--                        .o_form_view .o_group.o_inner_group-->
<!--                    {-->
<!--                        margin-left: 45px !important;-->
<!--                    }-->
<!--                    </style>-->
                     <header style="text-align:center;"><h2>Brokerage Report</h2></header>
                            <group>

                                <field name="fiscal_year" options="{'no_create': True, 'no_create_edit':True}" />
                                <field name="location" placeholder="Please select Location" />
                                <field name="monthly" widget="radio" options="{'horizontal': true}" />
                                <field name="months" placeholder="Please select Month" attrs="{'invisible':['|',('monthly','=','quatar'),('monthly','=','yearly')],'required':[('monthly','=','monthly')]}"/>
                                <field name="quarter" placeholder="Please select Quarter" attrs="{'invisible':['|',('monthly','=','monthly'),('monthly','=','yearly')],'required':[('monthly','=','quatar')]}"/>
                                <field name="date_from" />
                                <field name="date_to" />
                                <field name="groupby" placeholder="Please select Group By"/>
                                <field name="filterby" placeholder="Please select Filter By"/>
                                <field name="insurer_name" placeholder="Please select Insurer Name" options="{'no_create': True, 'no_create_edit':True}" attrs="{'invisible':['|',('filterby', '=','all'),('filterby', '=',False)],'required':['|',('filterby','=','insurername'),('filterby','=','insurerbranch')]}"/>
                                <field name="insurer_branch" placeholder="Please select Insurer Branch" options="{ 'no_create': True, 'no_create_edit':True}" attrs="{'invisible':['|','|',('filterby', '=','all'),('filterby', '=',False),('filterby', '=','insurername')],'required':[('filterby','=','insurerbranch')]}"/>
                            </group>
                    <footer>
                        <button name="generate_xlsx_report" string="Print" type="object" class="btn btn-sm btn-primary" default_focus="1"/>
                        <button string="Cancel" class="btn btn-sm btn-default" special="cancel"/>
                    </footer>

                </form>
            </field>
        </record>

        <record id="brokeragedetail_wizard" model="ir.actions.act_window">
            <field name="name">Print Excel</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">brokeragereport.report</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="brokerage_form"/>
            <field name="target">new</field>
        </record>

       <menuitem name="Brokerage Report" id="brokerage_report" parent="clickbima.menu_19" action="brokeragedetail_wizard" sequence="15"/>
</odoo>
