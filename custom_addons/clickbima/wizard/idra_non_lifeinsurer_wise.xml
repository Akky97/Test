<?xml version="1.0"?>
<odoo>
        <record id="idranonlife_form" model="ir.ui.view">
            <field name="name">idranonlife.report.wizard</field>
            <field name="model">idranonlife.report</field>
            <field name="arch" type="xml">
<!--                <style>-->
<!--                    .o_form_view .o_group .o_form_field-->
<!--                    {-->
<!--                        width: 22% !important;-->
<!--                    }-->
<!--                    .o_form_view .o_group.o_inner_group-->
<!--                    {-->
<!--                        margin-left: 45px !important;-->
<!--                    }-->
<!--                </style>-->
                <form string="Generate Report">
                    <header style="text-align:center;"><h2>IRDA Non Life Insurerwise Report</h2></header>
                    <group>
                        <field name="fiscal_year" options="{'no_create': True, 'no_create_edit':True}" />
                         <field name="location" placeholder="Please select Location" />
                        <field name="monthly" widget="radio" options="{'horizontal': true}" />
                        <field name="months" placeholder="Please select Month" attrs="{'invisible':['|',('monthly','=','quatar'),('monthly','=','yearly')],'required':[('monthly','=','monthly')]}"/>
                        <field name="quarter" placeholder="Please select Quarter" attrs="{'invisible':['|',('monthly','=','monthly'),('monthly','=','yearly')],'required':[('monthly','=','quatar')]}"/>
                        <field name="date_from" />
                        <field name="date_to" />
                        <field name="groupby" placeholder="Please select Group By"/>
                        <field name="filterby" placeholder="Please select Filter By"/>
                        <field name="category" placeholder="Please select Category" options="{'no_create': True, 'no_create_edit':True}" attrs="{'invisible':['|','|',('filterby', '=',False),('filterby', '=','all'),('filterby', '=','insurername')],'required':[('filterby','=','category')]}"/>
                        <field name="insurer_name" placeholder="Please select Insurer Name" options="{'no_create': True, 'no_create_edit':True}" attrs="{'invisible':['|','|',('filterby', '=',False),('filterby', '=','all'),('filterby', '=','category')],'required':[('filterby','=','insurername')]}"/>
                    </group>
                    <footer>
                        <button name="test_report1" string="Print" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn btn-sm btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="idranonlife_wizard" model="ir.actions.act_window">
            <field name="name">Print Excel</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">idranonlife.report</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="idranonlife_form"/>
            <field name="target">new</field>
        </record>

       <menuitem name="IRDA Non-Life Insurerwise Report" id="idranonlife_786" parent="clickbima.menu_19" action="idranonlife_wizard" sequence="6" />
</odoo>
