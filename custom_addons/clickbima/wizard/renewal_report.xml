                        <field name="register_name" options="{'no_create': True, 'no_create_edit':True}" attrs="{'invisible':['|',('filterby','=','all'),('filterby','=',False)],'required':[('filterby','=','registername')]}"/>
                    </group>
                    <footer>
                        <button name="generate_xlsx_report" string="Print" type="object" class="btn btn-sm btn-primary" default_focus="1"/>
                        <button string="Cancel" class="btn btn-sm btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="renewal_detail_wizard" model="ir.actions.act_window">
            <field name="name">Print Excel</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">renewaldetail.report</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="renewal_detail_form"/>
            <field name="target">new</field>
        </record>

       <menuitem name="Renewal Detail Report" id="renewalreport_21" parent="clickbima.menu_19" action="renewal_detail_wizard" sequence="12" />
