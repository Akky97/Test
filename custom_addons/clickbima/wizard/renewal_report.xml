<!--                        <field name="referred_by"  attrs="{'invisible':['|','|','|','|','|','|',('filterby','=','registername'),('filterby','=',False),('filterby', '=','policystatus'),('filterby', '=','medium'),('filterby', '=','source'),('filterby', '=','paymenttype'),('filterby', '=','salesperson')]}"/>-->
<!--                        <field name="payment_type" options="{'no_create': True, 'no_create_edit':True}" attrs="{'invisible':['|','|','|','|','|','|',('filterby','=','registername'),('filterby','=',False),('filterby', '=','policystatus'),('filterby', '=','medium'),('filterby', '=','source'),('filterby', '=','salesperson'),('filterby', '=','referredby')]}"/>-->
