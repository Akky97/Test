<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="lortemplist">
      <field name="name">lortemp list</field>
      <field name="model">lortemp</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="segment"/>
          <field name="product"/>
          <field name="lorcase"/>
        </tree>
      </field>
    </record>

      <record model="ir.ui.view" id="lortempform">
      <field name="name">lortemp form</field>
      <field name="model">lortemp</field>
      <field name="arch" type="xml">
        <form>
          <style>
            .setborder {
    background: #0076b3;
    color: #fff;
    height: 38px;
    text-align: center;
    padding-top: 3px;
    font-size: 24px;
    font-weight: bolder;
}


          </style>
          <sheet>
             <div class="row setborder">Policy Templates</div>
            <group>
              <field name="name" placeholder="LOR Type"/>
          <field name="segment" placeholder="---Select One---"/>
          <field name="product" placeholder="Product"/>
          <field name="lorcase" placeholder="LOR Case Type"/>



            </group>
          </sheet>
        </form>
      </field>
    </record>

      <record model="ir.ui.view" id="lortempsearch">
      <field name="name">lortemp search</field>
      <field name="model">lortemp</field>
      <field name="arch" type="xml">
        <search>
          <field name="name"/>
          <field name="segment"/>
          <field name="product"/>
          <field name="lorcase"/>
        </search>
      </field>
    </record>

      <record model="ir.ui.view" id="lortempgraph">
      <field name="name">lortemp graph</field>
      <field name="model">lortemp</field>
      <field name="arch" type="xml">
        <graph>
          <field name="name"/>
          <field name="segment"/>
          <field name="product"/>
          <field name="lorcase"/>
        </graph>
      </field>
    </record>

      <record model="ir.ui.view" id="lortemppivot">
      <field name="name">lortemp pivot</field>
      <field name="model">lortemp</field>
      <field name="arch" type="xml">
        <pivot>
          <field name="name"/>
          <field name="segment"/>
          <field name="product"/>
          <field name="lorcase"/>
        </pivot>
      </field>
    </record>
    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="lortemp_action_window">
      <field name="name">LOR Template Master</field>
      <field name="res_model">lortemp</field>
      <field name="view_mode">tree,form,search,graph,pivot,kanban</field>
    </record>

    <!-- server action to the one above -->
    <record model="ir.actions.server" id="lortemp_action_server">
      <field name="name">lortemp server</field>
      <field name="model_id" ref="model_lortemp"/>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
    </record>

    <menuitem name="LOR Template Master" id="list_131" parent="clickbima.menu_4" action="lortemp_action_window" sequence="2"/>

<!--    <menuitem id="Airspring optionalportnrc" name="AirSpring Master Optional Port NRC" parent="air_spring1.menu_2" action="optionalportnrc" sequence="8"/>-->
  </data>
</odoo>