<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="clientcreationlist">
      <field name="name">clientcreation list</field>
      <field name="model">clientcreation</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="pos"/>
          <field name="rmname"/>
          <field name="customertype"/>
          <field name="reference"/>
        </tree>
      </field>
    </record>

      <record model="ir.ui.view" id="clientcreationform">
      <field name="name">clientcreation form</field>
      <field name="model">clientcreation</field>
      <field name="arch" type="xml">
        <form>
        <notebook>
        <page string="Through POS">
          <group>
            <group>
              <field name="name" placeholder="---Select One---" options="{'no_create': True, 'no_create_edit':True}"/>
              <field name="pos" placeholder="POS"/>
              <field name="ppos" placeholder="P-POS"/>
              <field name="rmname" placeholder="RM Name"/>
              <field name="customertype" placeholder="---Select One---"/>

            </group>
            <group>
              <field name="reference" placeholder="Reference"/>
              <field name="telecaller" placeholder="Telecaller"/>
              <field name="csc" placeholder="CSC"/>
              <field name="smname" placeholder="SM Name"/>
              <field name="customergroup" placeholder="Customer Group"/>
            </group>
            </group>
          <sheet>
            <group>
              <group>
                <field name="occupation" placeholder="---Select One---"/>
                <field name="typeof" placeholder="---Select One---"/>
                <field name="industry" placeholder="---Select One---"/>
                <field name="customergrow" placeholder="---Select One---"/>
                <field name="title" placeholder="---Select One---"/>
                <field name="customernamed" placeholder="Customer Name(D)"/>
                <field name="customernamep" placeholder="Customer Name(P)"/>
                <field name="salutation" placeholder="Salutation"/>
                <field name="nickname" placeholder="Nick Name"/>
                <field name="gender" widget="radio" options="{'horizontal': true}"/>
                <field name="dateofbirth" placeholder="Date of Birth"/>
                <field name="dateofgreeting" placeholder="Date of Greetings"/>
                <field name="marriageanni" placeholder="Marriage Anniversary"/>



              </group>
              <group>
                <field name="paidup" placeholder="Paid-up Capital(INR)"/>
                <field name="other" placeholder="Other"/>
                <field name="website" placeholder="Website"/>
              </group>
            </group>
          </sheet>

        </page>
          <page string="Through Employee">
            <group>
              <group>
                <field name="name" placeholder="---Select One---"/>
                <field name="rm" placeholder="Select RM"/>
                <field name="sm" placeholder="SM"/>
                <field name="customertype" placeholder="---Select One---"/>
                <field name="customergroup" placeholder="Customer Group"/>
              </group>
              <group>
                <field name="reference" placeholder="Reference"/>
                <field name="csc" placeholder="CSC"/>
                <field name="telecaller" placeholder="TeleCaller"/>
              </group>
            </group>
            <sheet>
              <group>
              <group>
                <field name="occupation" placeholder="---Select One---"/>
                <field name="typeof" placeholder="---Select One---"/>
                <field name="industry" placeholder="---Select One---"/>
                <field name="customergrow" placeholder="---Select One---"/>
                <field name="title" placeholder="---Select One---"/>
                <field name="customernamed" placeholder="Customer Name(D)"/>
                <field name="customernamep" placeholder="Customer Name(P)"/>
                <field name="salutation" placeholder="Salutation"/>
                <field name="nickname" placeholder="Nick Name"/>
                <field name="gender" widget="radio" options="{'horizontal': true}"/>
                <field name="dateofbirth" placeholder="Date of Birth"/>
                <field name="dateofgreeting" placeholder="Date of Birth(Greetings)"/>
                <field name="marriageanni" placeholder="Marriage Anniversary"/>



              </group>
              <group>
                <field name="paidup" placeholder="Paid-up Capital(INR)"/>
                <field name="other" placeholder="Others"/>
                <field name="website" placeholder="Website"/>
              </group>
            </group>
            </sheet>

          </page>
        </notebook>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="clientcreation_action_window">
      <field name="name">Client Creation</field>
      <field name="res_model">clientcreation</field>
      <field name="view_mode">tree,form,graph,pivot,kanban</field>
    </record>

    <!-- server action to the one above -->
    <record model="ir.actions.server" id="clientcreation_action_server">
      <field name="name">clientcreation server</field>
      <field name="model_id" ref="model_clientcreation"/>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
    </record>

    <menuitem name="Client Creation" id="list_16" parent="clickbima.menu_2" action="clientcreation_action_window" sequence="16"/>

<!--    <menuitem id="Airspring optionalportnrc" name="AirSpring Master Optional Port NRC" parent="air_spring1.menu_2" action="optionalportnrc" sequence="8"/>-->
  </data>
</odoo>