<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="poscreationlist">
      <field name="name">poscreation list</field>
      <field name="model">poscreation</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="branch"/>
          <field name="title"/>
          <field name="posname"/>
          <field name="accounttype"/>
          <field name="acno"/>


        </tree>
      </field>
    </record>

      <record model="ir.ui.view" id="poscreationform">
      <field name="name">poscreation form</field>
      <field name="model">poscreation</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
            <group>
              <field name="name" placeholder="---Select One---"/>
              <field name="category" placeholder="---Select One---"/>
              <field name="branch" placeholder="---Select One---"/>
              <field name="title" placeholder="---Select One---"/>
              <field name="posname" placeholder="POS Name(D)"/>
              <field name="beneficiary" placeholder="Beneficiary"/>
              <field name="principle" widget="radio" options="{'horizontal': true}"/>
              <field name="rmname" placeholder="RM Name"/>
              <field name="reference" placeholder="Reference"/>
              <field name="telecaller" placeholder="Telecaller"/>
              <field name="csc" placeholder="CSC"/>

            </group>
              <group>
                <field name="accounttype" placeholder="---Select One---"/>
                <field name="acno" placeholder="A/C No"/>
                <field name="bank" placeholder="---Select One---"/>
                <field name="bankbranch" placeholder="Bank Branch"/>
                <field name="bankaddress" placeholder="Bank Address"/>
                <field name="ifsccode" placeholder="IFSC Code"/>
                <field name="micr" placeholder="MICR"/>
                <field name="dateofbday" placeholder="Date of Birthday"/>
                <field name="anniversarydate" placeholder="Anniversary Date"/>
                <field name="dateofjoin" placeholder="Date of Joining"/>
                <field name="posnamep" placeholder="POS Name(P)"/>
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="poscreation_action_window">
      <field name="name">POS Creation</field>
      <field name="res_model">poscreation</field>
      <field name="view_mode">tree,form,graph,pivot,kanban</field>
    </record>

    <!-- server action to the one above -->
    <record model="ir.actions.server" id="poscreation_action_server">
      <field name="name">poscreation server</field>
      <field name="model_id" ref="model_poscreation"/>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
    </record>

    <menuitem name="POS Creation" id="list_14" parent="clickbima.menu_2" action="poscreation_action_window" sequence="14"/>

<!--    <menuitem id="Airspring optionalportnrc" name="AirSpring Master Optional Port NRC" parent="air_spring1.menu_2" action="optionalportnrc" sequence="8"/>-->
  </data>
</odoo>