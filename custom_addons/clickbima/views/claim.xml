<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="claimentrylist">
      <field name="name">claimentry list</field>
      <field name="model">claimentry</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="clientname"/>
          <field name="insurername"/>
          <field name="groupname"/>
          <field name="insurerbranch"/>
          <field name="policytype"/>
        </tree>
      </field>
    </record>

      <record model="ir.ui.view" id="claimentryform">
      <field name="name">claimentry form</field>
      <field name="model">claimentry</field>
      <field name="arch" type="xml">
        <form>
            <group>
              <div class="row">
        <div class="col-md-6">
            <table>
        <tr>
            <th class="col-md-2">No.</th>
            <td class="col-md-2" style="width: auto;"><field name="name" placeholder="No."/></td>
        </tr>
              <tr>
                <th class="col-md-2">Client Name</th>
                <td class="col-md-4"><field name="clientname" placeholder="Client Name"/></td>
              </tr>
              <tr>
                <th class="col-md-2">Group Name</th>
                <td class="col-md-4"><field name="groupname" placeholder="Group Name"/></td>
        </tr>
              <tr>
                <th class="col-md-2">Policy Type</th>
                <td class="col-md-4"> <field name="policytype" placeholder="Policy Type"/></td>
              </tr>
               <tr>
                <th class="col-md-2">Policy No.</th>
                <td class="col-md-4"><field name="policyno" placeholder="Policy No."/></td>
              </tr>
               <tr>
                <th class="col-md-2">Sum Insured</th>
                <td class="col-md-4"><field name="suminsured" placeholder="Sum Insured"/></td>
              </tr>
    </table>

        </div>
                <div class="col-md-6">
                  <table>
        <tr>
            <th class="col-md-2">Date</th>
            <td class="col-md-2" style="width: auto;"><field name="date1" placeholder="Date"/></td>
          <th>Docket Details</th>
        </tr>
              <tr>
                <th>Insurer Name</th>
                <td class="col-md-4"><field name="insurername" placeholder="Insurer Name"/></td>
              </tr>
              <tr>
                <th>Insurer Branch</th>
                <td><field name="insurerbranch" placeholder="Insurer Branch"/></td>
        </tr>
                    <tr>
                      <th>Issue Date</th>
                      <td><field name="issuedate" placeholder="Issue Date"/> </td>
                    </tr>
              <tr>
                <th>Start From</th>
                <td><field name="startfrom" placeholder="Start From"/></td>
                <th>Expiry</th>
                <td><field name="expiry" placeholder="Expiry"/></td>
              </tr>
               <tr>
                <th>Share %</th>
                <td><field name="share" placeholder="Share %"/></td>
                 <th>Net Premium</th>
                 <td><field name="netamount" placeholder="Net Premium"/></td>
              </tr>

    </table>
                </div>
              </div>
          </group>
        <group>
            <group>






            </group>
              <group>








              </group>
            </group>
            <group string="Claim Details">
              <group>
                <field name="claimtype" placeholder="---Select One---"/>
                <field name="claimid" placeholder="Claim ID"/>
                <field name="dateof" placeholder="Date of Information"/>
              </group>
              <group>
                <field name="date2" placeholder="Date"/>
              </group>
            </group>
            <group string="Insurer Details">
              <group>
                <field name="insurername1" placeholder="Insurer Name"/>
                <field name="concernedper" placeholder="Concerned Name"/>
                <field name="contact" placeholder="Contact No."/>
                <field name="email" placeholder="Email ID"/>
              </group>
              <group>
                <field name="concerper" placeholder="Concerned Person"/>
                <field name="contact1" placeholder="Contact No."/>
                <field name="email1" placeholder="Email ID"/>
              </group>
            </group>
            <group string="Insured Details">
              <group>
                <field name="insuredname" placeholder="Insured Name"/>
                <field name="conperson" placeholder="Concerned Person"/>
                <field name="cont1" placeholder="Contact No."/>
                <field name="emailid" placeholder="Email ID"/>
              </group>
              <group>
                <field name="conperson1" placeholder="Concerned Person"/>
                <field name="cont2" placeholder="Contact No."/>
                <field name="emailid1" placeholder="Email ID"/>
              </group>
            </group>
            <group string="Employee Details">
              <group>
                <field name="empname" placeholder="Employee Name"/>
                <field name="empcont" placeholder="Employee Contact No."/>
              </group>
              <group>
                <field name="empcode" placeholder="Employee Code"/>
                <field name="emplocation" placeholder="Employee Location"/>
                <field name="empemailid" placeholder="Employee Email ID"/>
              </group>
            </group>
            <group string="Other Details">
              <group>
                <field name="idissue" placeholder="ID Issu. by Insuer /TPA"/>
                <field name="admissiondate" placeholder="Admission Date"/>
                <field name="dischargedate" placeholder="Discharge Date"/>
                <field name="patient" placeholder="Patient Name"/>
                <field name="relationwith" placeholder="Relation with Empl."/>
              </group>
              <group>
                <field name="claimid1" placeholder="Claim ID"/>
                <field name="primary" placeholder="Primary Dignosis"/>
                <field name="final" placeholder="Final Dignosis"/>
                <field name="claimamount" placeholder="Claim Amount"/>
                <field name="remark" placeholder="Remarks"/>
              </group>
            </group>
            <group string="Details of LOR">
              <group>
                <button style="width:100%; font-size: 16px;"  string="Select LOR" />
              </group>
            </group>
            <group string="Event History">
              <group>

              </group>
            </group>

        </form>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="claimentry_action_window">
      <field name="name">Claim Entry</field>
      <field name="res_model">claimentry</field>
      <field name="view_mode">tree,form,graph,pivot,kanban</field>
    </record>

    <!-- server action to the one above -->
    <record model="ir.actions.server" id="claimentry_action_server">
      <field name="name">claimentry server</field>
      <field name="model_id" ref="model_claimentry"/>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
    </record>

    <menuitem name="Claim Entry" id="list_130" parent="clickbima.menu_4" action="claimentry_action_window" sequence="1"/>

<!--    <menuitem id="Airspring optionalportnrc" name="AirSpring Master Optional Port NRC" parent="air_spring1.menu_2" action="optionalportnrc" sequence="8"/>-->
  </data>
</odoo>