<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="idralist">
      <field name="name">irda list</field>
      <field name="model">idra</field>
      <field name="arch" type="xml">
        <tree import="false">
                <field name="category"/>
                <field name="subcategory"/>
                <field name="fdate"/>
                <field name="tdate"/>
                <field name="name" string="Rate(%)"/>
        </tree>
      </field>
    </record>

      <record model="ir.ui.view" id="idraform">
      <field name="name">irda form</field>
      <field name="model">idra</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
                <group>
                    <field name="category" placeholder="---Category---" options="{'no_create': True, 'no_create_edit':True,'no_open':True}" />
                    <field name="subcategory" placeholder="---Sub-Category---"   options="{'no_create': True, 'no_create_edit':True,'no_open':True}"/>
                    <field name="check_edit" invisible="1"/>
                </group>
                <group>
                    <field name="fdate" placeholder="---From Date---" attrs="{'readonly': [('check_edit', '=', True)]}"/>
                <field name="tdate" placeholder="---To Date---" attrs="{'readonly': [('check_edit', '=', True)]}"/>
                </group>

            </group>
              <group>
                <field name="name" placeholder="Rate" required="True" string="Rate(%)"/>



            </group>
          </sheet>
        </form>
      </field>
    </record>
       <record model="ir.ui.view" id="idrapivot">
      <field name="name">irda pivot</field>
      <field name="model">idra</field>
      <field name="arch" type="xml">
        <pivot>
<!--                <field name="fdate"/>-->
<!--                <field name="tdate"/>-->
<!--                <field name="name" string="Rate(%)"/>-->


        </pivot>
      </field>
    </record>
       <record model="ir.ui.view" id="idragraph">
      <field name="name">irda graph</field>
      <field name="model">idra</field>
      <field name="arch" type="xml">
        <graph>
                <field name="category"/>
                <field name="subcategory"/>
                <field name="fdate"/>
                <field name="tdate"/>
                <field name="name" string="Rate(%)"/>
        </graph>
      </field>
    </record>
       <!-- Search op on models -->
    <record id="idra_search_view" model="ir.ui.view">
			<field name="name">irda.search.view</field>
			<field name="model">idra</field>
			<field name="arch" type="xml">
				<search string="Idra Search">
					<field name="category"/>
					<field name="subcategory"/>
					<field name="fdate"/>
					<field name="tdate"/>
					<field name="name" string="Rate"/>
                    <group expand="0" string="Group By">
                  <filter string="Category" name="groupby_category" context="{'group_by': 'category'}"/>
                  <filter string="SubCategory" name="groupby_subcategory" context="{'group_by': 'subcategory'}"/>
              </group>
				</search>
			</field>
		</record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="idra_action_windows">
      <field name="name">IRDA Rate</field>
      <field name="res_model">idra</field>
      <field name="view_mode">tree,form,graph,pivot,kanban,search</field>
    </record>

    <!-- server action to the one above -->
    <record model="ir.actions.server" id="idra_action_server">
      <field name="name">irda server</field>
      <field name="model_id" ref="model_idra"/>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
    </record>

    <menuitem name="IRDA Rate" id="list_12357" parent="clickbima.menu_1" action="idra_action_windows" sequence="3"/>

<!--    <menuitem id="Airspring optionalportnrc" name="AirSpring Master Optional Port NRC" parent="air_spring1.menu_2" action="optionalportnrc" sequence="8"/>-->
  </data>
</odoo>