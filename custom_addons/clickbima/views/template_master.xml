<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="tempmasterlist">
      <field name="name">tempmaster list</field>
      <field name="model">tempmaster</field>
      <field name="arch" type="xml">
        <tree>
<!--          <field name="name"/>-->
          <field name="claimtype1" string="Template Type"/>
          <field name="category"/>
            <field name="subcategory"/>
        </tree>
      </field>
    </record>

      <record model="ir.ui.view" id="tempmasterform">
      <field name="name">tempmaster form</field>
      <field name="model">tempmaster</field>
      <field name="arch" type="xml">
        <form>
            <script>
                    $( "#showbtn123" ).click(function() {
$(this).toggleClass('fa-minus-circle')
  $( "#tempdiv" ).toggle('slow');
});
            </script>
          <sheet>
              <group>
            <group>

              <field name="name" string="Broker Name"  options="{'no_create': True, 'no_create_edit':True,'no_open':True}"/>
          <field name="claimtype" invisible="1"/>
          <field name="claimtype1" options="{'no_create': True, 'no_create_edit':True,'no_open':True}"  string="Template Type"/>
            </group>
                  <group>
                      <field name="category"  options="{'no_create': True, 'no_create_edit':True,'no_open':True}" />
                        <field name="subcategory"  options="{'no_create': True, 'no_create_edit':True,'no_open':True}" />
                  </group>
              </group>

               <group>
                <div class="row ist_table">

                    <table style="margin-left: 45%;">
                <tr>
                    <th style="padding-top:5px padding-left:10px;"><a href="javascript:void(0)" style="background: #759bfa; color: white; padding: 12px 11px 14px 10px; font-size: 15px;" id="showbtn123" class="pipelinedetails fa fa-plus-circle">Template Header</a></th>
                </tr>
                    </table>

                </div>

            </group>
<group>

              <div class="col-md-12" style="display: none;" id="tempdiv">

    <table style="width:100%;">
            <thead>
                <tr>
                    <th colspan="10" style="background: #759bfa; color: white; text-align:center;">Template Header</th>
                </tr>
            </thead>
    <tbody>
        <tr>
            <td colspan="10">
            <field name="tempremark">
            <form>
            <sheet>
                <group>
                    <field name="name" invisible="1"/>

                    <field name="header"/>

                    <field name="remark"/>
                </group>
            </sheet>
            </form>
            <tree  editable="bottom">
<field name="sequence" widget="handle"/>
                <field name="name" invisible="1"/>
                <field name="header" />
                    <field name="remark"/>
            </tree>
                </field>
            </td>
            </tr>
         </tbody>
     </table>

        </div>
</group>
          </sheet>
        </form>
      </field>
    </record>

      <record model="ir.ui.view" id="tempmastersearch">
      <field name="name">tempmaster search</field>
      <field name="model">tempmaster</field>
      <field name="arch" type="xml">
         <search string="Search Info-Type Name">
          <field name="name"/>
          <field name="claimtype1" string="Template Type"/>
          <field name="category"/>
             <field name="subcategory"/>
              <group expand="0" string="Group By">
                  <filter string="Broker Name" name="groupby_name" context="{'group_by': 'name'}"/>
                  <filter string="Template Type" name="groupby_templatetype" context="{'group_by': 'claimtype1'}"/>
                  <filter string="Category" name="groupby_category" context="{'group_by': 'category'}"/>
                  <filter string="Sub-Category" name="groupby_subcategory" context="{'group_by': 'subcategory'}"/>
              </group>
         </search>
      </field>
    </record>

      <record model="ir.ui.view" id="tempmasterpivot">
      <field name="name">tempmaster pivot</field>
      <field name="model">tempmaster</field>
      <field name="arch" type="xml">
        <pivot>
<!--           <field name="name"/>-->
<!--            <field name="claimtype1" string="Template Type" />-->

        </pivot>
      </field>
    </record>


      <record model="ir.ui.view" id="tempmastergraph">
      <field name="name">tempmaster graph</field>
      <field name="model">tempmaster</field>
      <field name="arch" type="xml">
        <graph>
          <field name="name"/>
          <field name="claimtype1" string="Template Type"/>
            <field name="category"/>
            <field name="subcategory"/>
        </graph>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="tempmaster_action_window">
      <field name="name">Template Master</field>
      <field name="res_model">tempmaster</field>
      <field name="view_mode">tree,form,search,graph,pivot,kanban</field>
    </record>

    <!-- server action to the one above -->
    <record model="ir.actions.server" id="tempmaster_action_server">
      <field name="name">tempmaster server</field>
      <field name="model_id" ref="model_tempmaster"/>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
    </record>

    <menuitem name="Template Master" id="list_8" parent="clickbima.menu_1" action="tempmaster_action_window" sequence="5"/>

<!--    <menuitem id="Airspring optionalportnrc" name="AirSpring Master Optional Port NRC" parent="air_spring1.menu_2" action="optionalportnrc" sequence="8"/>-->
  </data>
</odoo>