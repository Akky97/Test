<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="cdaclist">
      <field name="name">cdac list</field>
      <field name="model">cdac</field>
      <field name="arch" type="xml">
        <tree>
            <field name="clientname12" />
            <field name="groupname23" invisible="1"/>
            <field name="insurername121"/>
            <field name="insurerbranch22"/>
            <field name="location_id" />
            <field name="fy" />
            <field name="segment" string="Category" invisible="1"/>
            <field name="name" string="CD A/C No"/>
            <field name="baldate"/>
            <field name="closing_balance" string="Closing Balance"/>
        </tree>
      </field>
    </record>

       <record model="ir.ui.view" id="cdacgraph">
      <field name="name">cdac graph</field>
      <field name="model">cdac</field>
      <field name="arch" type="xml">
        <graph>
            <!--<field name="clientname12"/>-->
            <field name="groupname23" />
            <field name="location_id"/>
            <field name="insurerbranch22" />
            <field name="insurername121"/>
            <field name="segment" string="Category"/>
            <field name="name" string="CD A/C No"/>
            <field name="baldate"/>
            <field name="closing_balance" string="Closing Balance"/>
        </graph>
      </field>
    </record>

      <record model="ir.ui.view" id="cdacsearch">
      <field name="name">cdac search</field>
      <field name="model">cdac</field>
      <field name="arch" type="xml">
        <search>
            <!--<field name="clientname12"/>-->
            <field name="groupname23" />
            <field name="location_id"/>
            <field name="insurerbranch22" />
            <field name="insurername121"/>
            <field name="segment" string="Category"/>
            <field name="name" string="CD A/C No"/>
            <field name="baldate"/>
            <field name="closing_balance" string="Closing Balance"/>
             <group expand="0" string="Group By">
                  <!--<filter string="Client Name" name="groupby_clientname" context="{'group_by': 'clientname12'}"/>-->
                  <filter string="Insurer Name" name="groupby_insurername" context="{'group_by': 'insurername121'}"/>
                  <filter string="Insurer Branch" name="groupby_branch" context="{'group_by': 'insurerbranch22'}"/>
<!--                  <filter string="Category" name="groupby_category" context="{'group_by': 'segment'}"/>-->
                  <filter string="Location" name="groupby_location" context="{'group_by': 'location_id'}"/>
             </group>
        </search>
      </field>
    </record>

       <record model="ir.ui.view" id="cdacpivot">
      <field name="name">cdac pivot</field>
      <field name="model">cdac</field>
      <field name="arch" type="xml">
        <pivot>
           <field name="closing_balance"/>
           <field name="accbal"/>
           <field name="totalcr"/>
           <field name="totaldr"/>
        </pivot>
      </field>
    </record>

