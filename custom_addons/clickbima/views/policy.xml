<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="policylist">
      <field name="name">policy list</field>
      <field name="model">policy</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
            <field name="pname"/>
            <field name="isre"/>
            <field name="isde"/>

        </tree>
      </field>
    </record>

      <record model="ir.ui.view" id="policyform">
      <field name="name">policy form</field>
      <field name="model">policy</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
                <field name="name" placeholder="Policy Segment" options="{'no_create': True, 'no_create_edit':True}"/>
                <field name="pname" placeholder="Policy Name"/>
                <field name="isre" widget="radio" options="{'horizontal': true}"/>
                <field name="isde" widget="radio" options="{'horizontal': true}"/>
                <field name="declare" placeholder="Declaration Type" attrs="{'invisible':[('isde','=','no')]}"/>

            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="policy_action_window">
      <field name="name">Policy</field>
      <field name="res_model">policy</field>
      <field name="view_mode">tree,form,graph,pivot,kanban</field>
    </record>

    <!-- server action to the one above -->
    <record model="ir.actions.server" id="policy_action_server">
      <field name="name">policy server</field>
      <field name="model_id" ref="model_policy"/>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
    </record>



<!--    <menuitem id="Airspring optionalportnrc" name="AirSpring Master Optional Port NRC" parent="air_spring1.menu_2" action="optionalportnrc" sequence="8"/>-->
  </data>
</odoo>