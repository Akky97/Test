<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="schemelist">
      <field name="name">scheme list</field>
      <field name="model">scheme</field>
      <field name="arch" type="xml">
        <tree>
          <field name="branch" string="Insurer Name"/>
          <field name="type" string="Insurer Type"/>

            <field name="name" string="Scheme Name"/>

            <field name="subcategory"/>
        </tree>
      </field>
    </record>

      <record model="ir.ui.view" id="schemeform">
      <field name="name">scheme form</field>
      <field name="model">scheme</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
                <field name="branch" domain="[('customer','=',True)]"  options="{'no_create': True, 'no_create_edit':True}" placeholder="Insurer Name" string="Insurer Name"/>

              <field name="type" placeholder="Insurer Type" string="Insurer Type" options="{'no_create': True, 'no_create_edit':True}"/>
<field name="name" string="Scheme Name" placeholder="Scheme Name"/>

                 <field name="subcategory" options="{'no_create': True, 'no_create_edit':True}" widget="many2many_tags"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="scheme_action_window">
      <field name="name">Scheme Master</field>
      <field name="res_model">scheme</field>
      <field name="view_mode">tree,form,graph,pivot,kanban</field>
    </record>

    <!-- server action to the one above -->
    <record model="ir.actions.server" id="scheme_action_server">
      <field name="name">scheme server</field>
      <field name="model_id" ref="model_scheme"/>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
    </record>

    <menuitem name="Scheme Master" id="list_20001" parent="clickbima.menu_1" action="scheme_action_window" sequence="4"/>

<!--    <menuitem id="Airspring optionalportnrc" name="AirSpring Master Optional Port NRC" parent="air_spring1.menu_2" action="optionalportnrc" sequence="8"/>-->
  </data>
</odoo>