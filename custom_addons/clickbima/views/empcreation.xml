<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="empcreationlist">
      <field name="name">empcreation list</field>
      <field name="model">empcreation</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="branch" placeholder="---Select One---"/>
            <field name="title" placeholder="---Select One---"/>
            <field name="empname" placeholder="Employee Name"/>
            <field name="department" placeholder="---Select One---"/>

        </tree>
      </field>
    </record>

      <record model="ir.ui.view" id="empcreationform">
      <field name="name">empcreation form</field>
      <field name="model">empcreation</field>
      <field name="arch" type="xml">
        <form>
<sheet>
            <group>

              <group>
                <field name="sm"/>
                <field name="rm"/>
                <field name="reference"/>
              </group>
                <group>
                  <field name="tl"/>
                  <field name="tc"/>
                  <field name="csc"/>
                </group>

            </group>
          <group>
          <group>
            <field name="name" placeholder="Role Type"/>
            <field name="branch" placeholder="---Select One---"/>
            <field name="title" placeholder="---Select One---"/>
            <field name="empname" placeholder="Employee Name"/>
            <field name="department" placeholder="---Select One---"/>
            <field name="designation" placeholder="---Select One---"/>
            <field name="dateofjoin" placeholder="Date of Joining"/>
            <field name="dateofbday" placeholder="Birthday Date"/>
            <field name="anniversarydate" placeholder="Anniversary Date"/>
          </group>
          <group>
            <field name="accounttype" placeholder="---Select One---"/>
            <field name="acno" placeholder="A/C No"/>
            <field name="bank" placeholder="---Select One---"/>
            <field name="bankbranch" placeholder="Bank Branch"/>
            <field name="bankaddress" placeholder="Bank Address"/>
            <field name="ifsccode" placeholder="IFSC Code"/>
            <field name="micr" placeholder="MICR"/>
            <field name="empp" placeholder="Employee Name(p)"/>


          </group>
          </group>
</sheet>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="empcreation_action_window">
      <field name="name">Employee Creation</field>
      <field name="res_model">empcreation</field>
      <field name="view_mode">tree,form,graph,pivot,kanban</field>
    </record>

    <!-- server action to the one above -->
    <record model="ir.actions.server" id="empcreation_action_server">
      <field name="name">empcreation server</field>
      <field name="model_id" ref="model_empcreation"/>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
    </record>

    <menuitem name="Employee Creation" id="list_15" parent="clickbima.menu_2" action="empcreation_action_window" sequence="15"/>

<!--    <menuitem id="Airspring optionalportnrc" name="AirSpring Master Optional Port NRC" parent="air_spring1.menu_2" action="optionalportnrc" sequence="8"/>-->
  </data>
</odoo>