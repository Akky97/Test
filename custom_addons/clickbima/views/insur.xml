<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="insurerlist">
      <field name="name">Insurer-Branch Master</field>
      <field name="model">insurer</field>
      <field name="arch" type="xml">
        <tree import="false" default_order="name asc">
            <field name="name"/>
            <field name="type"/>
            <field name="branch"/>
          <field name="series" string="Series"/>
        </tree>
      </field>
    </record>

      <record model="ir.ui.view" id="insurerform">
      <field name="name">Insurer-Branch Master</field>
      <field name="model">insurer</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
                <field name="name" placeholder="Insurer Name"  options="{'no_create': True, 'no_create_edit':True,'no_open': True}"/>
                <field name="branch" placeholder="Branch Name"  options="{'no_create': True, 'no_create_edit':True,'no_open': True}"/>
                <field name="type" placeholder="Type"/>
              <field name="series"/>
                <field name="attachment" widget="many2many_binary"	 />
                <field name="header" />

            </group>
          </sheet>
        </form>
      </field>
    </record>


    <record model="ir.ui.view" id="insurerform123">
      <field name="name">Insurer-Branch Master</field>
      <field name="model">insurer</field>
      <field name="arch" type="xml">
        <search string="Insurer-Branch Master">
          <field name="name"/>
            <field name="type"/>
            <field name="branch"/>
            <field name="series" string="Series"/>
             <group expand="0" string="Group By">
                  <filter string="Insurer Name" name="groupbyname" context="{'group_by': 'name'}"/>
                  <filter string="Branch" name="groupby_branch" context="{'group_by': 'branch'}"/>
                  <filter string="Type" name="groupby_type" context="{'group_by': 'type'}"/>
             </group>
        </search>
      </field>
    </record>


     <record model="ir.ui.view" id="insurerpivot">
      <field name="name">Insurer-Branch Master</field>
      <field name="model">insurer</field>
      <field name="arch" type="xml">
        <pivot string="Insurer-Branch Master">
<!--          <field name="name"/>-->
<!--          <field name="type"/>-->
<!--            <field name="branch"/>-->
<!--          <field name="series" string="Series"/>-->
        </pivot>
      </field>
    </record>

     <record model="ir.ui.view" id="insurergraph">
      <field name="name">Insurer-Branch Master</field>
      <field name="model">insurer</field>
      <field name="arch" type="xml">
        <graph string="Insurer-Branch Master">
          <field name="name"/>
          <field name="type"/>
            <field name="branch"/>
          <field name="series" string="Series"/>
        </graph>
      </field>
    </record>
    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="insurer_action_window">
      <field name="name">Insurer-Branch Master</field>
      <field name="res_model">insurer</field>
      <field name="view_mode">tree,form,graph,pivot,kanban</field>
    </record>

    <!-- server action to the one above -->
    <record model="ir.actions.server" id="insurer_action_server">
      <field name="name">Insurer-Branch Master</field>
      <field name="model_id" ref="model_insurer"/>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
    </record>

    <menuitem name="Insurer-Branch Mapping" id="list_2" parent="clickbima.menu_1" action="insurer_action_window" sequence="2"/>

<!--    <menuitem id="Airspring optionalportnrc" name="AirSpring Master Optional Port NRC" parent="air_spring1.menu_2" action="optionalportnrc" sequence="8"/>-->
  </data>
</odoo>