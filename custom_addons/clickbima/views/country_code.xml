<odoo>
    <data>

        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="countrycodelist12">
            <field name="name">Country Code</field>
            <field name="model">country.code</field>
            <field name="arch" type="xml">
                <tree>
                   <field name="name"/>
                    <field name="country_name"/>
                </tree>
            </field>
        </record>




        <record model="ir.ui.view" id="countrycodeform_12">
            <field name="name">Country Code</field>
            <field name="model">country.code</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="country_name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="countrycode_action_window">
            <field name="name">Country Code</field>
            <field name="res_model">country.code</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- server action to the one above -->
        <record model="ir.actions.server" id="countrycode_action_server">
            <field name="name">Country Code server</field>
            <field name="model_id" ref="model_country_code"/>
            <field name="code">
                action = {
                "type": "ir.actions.act_window",
                "view_mode": "tree,form",
                "res_model": self._name,
                }
            </field>
        </record>

        <menuitem name="Country code" id="country_20" parent="clickbima.menu_0"
                  action="countrycode_action_window" sequence="10"/>

        <!--    <menuitem id="Airspring optionalportnrc" name="AirSpring Master Optional Port NRC" parent="air_spring1.menu_2" action="optionalportnrc" sequence="8"/>-->
    </data>
</odoo>