<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="declarationdetailslist">
      <field name="name">declarationdetails list</field>
      <field name="model">declarationdetails</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>

        </tree>
      </field>
    </record>

      <record model="ir.ui.view" id="declarationdetailsform">
      <field name="name">declarationdetails form</field>
      <field name="model">declarationdetails</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
             <field name="name"/>

          </sheet>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="declarationdetails_action_window">
      <field name="name">Declaration Details</field>
      <field name="res_model">declarationdetails</field>
      <field name="view_mode">tree,form,graph,pivot,kanban</field>
    </record>

    <!-- server action to the one above -->
    <record model="ir.actions.server" id="declarationdetails_action_server">
      <field name="name">declarationdetails server</field>
      <field name="model_id" ref="model_declarationdetails"/>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
    </record>

    <menuitem name="Declaration For Certification" id="list_228" parent="clickbima.menu_7" action="declarationdetails_action_window" sequence="8"/>

<!--    <menuitem id="Airspring optionalportnrc" name="AirSpring Master Optional Port NRC" parent="air_spring1.menu_2" action="optionalportnrc" sequence="8"/>-->
  </data>
</odoo>