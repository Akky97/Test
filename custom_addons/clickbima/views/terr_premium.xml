<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="terrlist">
      <field name="name">Terr Premium</field>
      <field name="model">terrpremium</field>
      <field name="arch" type="xml">
        <tree import="false" default_order="insurername asc">
           <field name="insurername"/>
          <field name="category"/>
          <field name="subcategory"/>

          <field name="fdate"/>
          <field name="tdate"/>
          <field name="rate"/>
        </tree>
      </field>
    </record>


      <record model="ir.ui.view" id="terrform">
      <field name="name">Terr Premium</field>
      <field name="model">terrpremium</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="insurername" placeholder="---Insurer Name---"  options="{'no_create': True, 'no_create_edit':True,'no_open':True}"/>
              <field name="category"  placeholder="---Category---"   options="{'no_create': True, 'no_create_edit':True,'no_open':True}"/>
              <field name="subcategory" placeholder="---Sub-Category---"  options="{'no_create': True, 'no_create_edit':True,'no_open':True}"/>
              <field name="check_edit" invisible="1"/>
              <field name="fdate" placeholder="---From Date---" attrs="{'readonly': [('check_edit', '=', True)]}"/>
              <field name="tdate" placeholder="---To Date---" attrs="{'readonly': [('check_edit', '=', True)]}"/>
              <field name="rate" placeholder="Rate"/>
              <field name="remark" placeholder="Remarks"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>


    <record model="ir.ui.view" id="terrform123">
      <field name="name">Terr Premium</field>
      <field name="model">terrpremium</field>
      <field name="arch" type="xml">
       <search string="Terr Premium Search">
					<field name="insurername"/>
                    <field name="category" />
                    <field name="subcategory" />
                    <field name="fdate" />
                    <field name="tdate" />
                    <field name="rate" />
                    <group expand="0" string="Group By">
                       <filter string="Insurer Name" name="groupby_insyrername" context="{'group_by': 'insurername'}"/>
                       <filter string="Category" name="groupby_category" context="{'group_by': 'category'}"/>
                       <filter string="Sub-Category" name="groupby_subcategory" context="{'group_by': 'subcategory'}"/>
                       <filter string="From Date" name="groupby_fromdate" context="{'group_by': 'fdate'}"/>
                       <filter string="To Date" name="groupby_todate" context="{'group_by': 'tdate'}"/>
                       <filter string="Rate" name="groupby_rate" context="{'group_by': 'rate'}"/>
                    </group>
       </search>
      </field>
    </record>

      <record model="ir.ui.view" id="terrpivot">
      <field name="name">Terr Premium</field>
      <field name="model">terrpremium</field>
      <field name="arch" type="xml">
        <pivot>
<!--           <field name="insurername" />-->

<!--          <field name="fdate"/>-->
<!--          <field name="tdate"/>-->
<!--          <field name="rate"/>-->
        </pivot>
      </field>
    </record>

      <record model="ir.ui.view" id="terrgraph">
      <field name="name">Terr Premium</field>
      <field name="model">terrpremium</field>
      <field name="arch" type="xml">
        <graph>
           <field name="insurername"/>
          <field name="category"/>
          <field name="subcategory"/>
          <field name="fdate"/>
          <field name="tdate"/>
          <field name="rate"/>
        </graph>
      </field>
    </record>
    <!-- Search op on models -->
    <record id="terr_search_view" model="ir.ui.view">
			<field name="name">terr.search.view</field>
			<field name="model">terrpremium</field>
			<field name="arch" type="xml">
				<search string="Terr Premium Search">
					<field name="insurername"/>
                    <field name="category" />
                    <field name="subcategory" />
				</search>
			</field>
		</record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="terr_action_window">
      <field name="name">Terr Premium</field>
      <field name="res_model">terrpremium</field>
      <field name="view_mode">tree,form,graph,pivot,kanban,search</field>
    </record>

    <!-- server action to the one above -->
    <record model="ir.actions.server" id="terr_action_server">
      <field name="name">Terr Premium server</field>
      <field name="model_id" ref="model_terrpremium"/>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
    </record>

    <menuitem name="Terr Premium" id="list_1262qw" parent="clickbima.menu_1" action="terr_action_window" sequence="10"/>

