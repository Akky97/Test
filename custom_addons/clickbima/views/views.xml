<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="clickbima.list">
      <field name="name">clickbima list</field>
      <field name="model">clickbima.clickbima</field>
      <field name="arch" type="xml">
        <tree import="false">
<!--          <field name="name"/>-->
          <field name="companyname"/>

          <field name="shortname" invisible="1"/>
             <field name="contactperson" placeholder="Contact Person"/>
             <field name="name"/>
              <field name="contactno" placeholder="Contact No"/>
              <field name="email" placeholder="Email"/>
            <field name="address" placeholder="Address"  invisible="1"/>
              <field name="city" placeholder="City"  invisible="1"/>
              <field name="state" placeholder="State"  invisible="1"/>
              <field name="country" placeholder="Country"  invisible="1"/>
              <field name="pincode" placeholder="PinCode"  invisible="1"/>
              <field name="zone" placeholder="Zone"  invisible="1"/>
            <field name="start_active"/>

        </tree>
      </field>
    </record>

      <record model="ir.ui.view" id="clickbima.form">
      <field name="name">Location master</field>
      <field name="model">clickbima.clickbima</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
            <group>

<!--              <field name="name" placeholder="Code"/>-->
              <field name="companyname" placeholder="Company Name" options="{'no_create': True, 'no_create_edit':True,'no_open':True}"/>
              <field name="name" placeholder="Location Name"/>
              <field name="shortname" placeholder="Short Name"/>
              <field name="contactperson" placeholder="Contact Person" options="{'no_create': True, 'no_create_edit':True,'no_open':True}"/>
              <field name="contactno" placeholder="Contact No"/>
              <field name="email" placeholder="Email"/>
</group>
              <group>
                <field name="address" placeholder="Address"/>
              <field name="city" placeholder="City"  options="{'no_create': True, 'no_create_edit':True,'no_open':True}" />
              <field name="state" placeholder="State"  options="{'no_create': True, 'no_create_edit':True,'no_open':True}"/>
              <field name="country" placeholder="Country"  options="{'no_create': True, 'no_create_edit':True,'no_open':True}"/>
              <field name="pincode" placeholder="PinCode"/>
              <field name="zone" placeholder="Zone"/>
              <field name="start_active"/>
              </group>

            </group>
          </sheet>


        </form>
      </field>
    </record>

      <record model="ir.ui.view" id="clickbima.form12">
      <field name="name">Location search</field>
      <field name="model">clickbima.clickbima</field>
      <field name="arch" type="xml">
          <search string="Location Master">
              <field name="companyname"/>

          <field name="shortname"/>
             <field name="contactperson"/>
             <field name="name"/>
              <field name="contactno"/>
              <field name="email"/>
              <field name="address"/>
              <field name="city"/>
              <field name="state"/>
              <field name="country"/>
              <field name="pincode"/>
              <field name="zone"/>
              <filter string="Is True" domain="[('start_active', '!=', False)]" name="is_true"/>
              <filter string="Is False" domain="[('start_active', '!=', True)]" name="is_false"/>
               <group expand="0" string="Group By">
                  <filter string="Company Name" name="groupby_infotypename" context="{'group_by': 'companyname'}"/>
                  <filter string="Contact Person" name="groupby_infotypename" context="{'group_by': 'contactperson'}"/>
                  <filter string="State" name="groupby_infotypename" context="{'group_by': 'state'}"/>
                  <filter string="Country" name="groupby_infotypename" context="{'group_by': 'country'}"/>
              </group>
          </search>
      </field>
      </record>

      <record model="ir.ui.view" id="clickbima.graph">
      <field name="name">clickbima graph</field>
      <field name="model">clickbima.clickbima</field>
      <field name="arch" type="xml">
        <graph>
<!--          <field name="name"/>-->
          <field name="companyname"/>
             <field name="contactperson" placeholder="Contact Person"/>
             <field name="name"/>
              <field name="contactno" placeholder="Contact No"/>
              <field name="email" placeholder="Email"/>

        </graph>
      </field>
    </record>

      <record model="ir.ui.view" id="clickbima.pivot">
      <field name="name">clickbima pivot</field>
      <field name="model">clickbima.clickbima</field>
      <field name="arch" type="xml">
        <pivot>
