<!--              <field name="zone" placeholder="Zone"   invisible="1"/>-->
<!--            <field name="start_active"/>-->

        </pivot>
      </field>
    </record>
    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="clickbima.action_window">
      <field name="name">Location Master</field>
      <field name="res_model">clickbima.clickbima</field>
      <field name="view_mode">tree,form,graph,pivot,kanban,search</field>
    </record>

    <!-- server action to the one above -->
    <record model="ir.actions.server" id="clickbima.action_server">
      <field name="name">Bima Bachat server</field>
      <field name="model_id" ref="model_clickbima_clickbima"/>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
    </record>

