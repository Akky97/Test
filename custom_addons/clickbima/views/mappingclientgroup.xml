<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="mapclientgrouplist">
      <field name="name">mapclientgroup list</field>
      <field name="model">mapclientgroup</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>

        </tree>
      </field>
    </record>

      <record model="ir.ui.view" id="mapclientgroupform">
      <field name="name">mapclientgroup form</field>
      <field name="model">mapclientgroup</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="name"/>

            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="mapclientgroup_action_window">
      <field name="name">Mapping Client Group</field>
      <field name="res_model">mapclientgroup</field>
      <field name="view_mode">tree,form,graph,pivot,kanban</field>
    </record>

    <!-- server action to the one above -->
    <record model="ir.actions.server" id="mapclientgroup_action_server">
      <field name="name">mapclientgroup server</field>
      <field name="model_id" ref="model_mapclientgroup"/>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
    </record>

    <menuitem name="Mapping Client Group" id="list_18" parent="clickbima.menu_2" action="mapclientgroup_action_window" sequence="18"/>

<!--    <menuitem id="Airspring optionalportnrc" name="AirSpring Master Optional Port NRC" parent="air_spring1.menu_2" action="optionalportnrc" sequence="8"/>-->
  </data>
</odoo>