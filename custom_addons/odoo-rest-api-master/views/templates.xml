<odoo>
    <data>
        <record id="transfer_form_inherit_view" model="ir.ui.view">
            <field name="model">payment.transaction</field>
            <field name="inherit_id" ref="payment.transaction_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='acquirer_id']" position="after">
                    <field name="payment_intent" attrs="{'invisible': [('mode', '=', 'Meta Mask')]}"/>
                    <field name="from_address" attrs="{'invisible': [('mode', '=', 'Stripe')]}"/>
                    <field name="to_address" attrs="{'invisible': [('mode', '=', 'Stripe')]}"/>
                    <field name="hash_data" attrs="{'invisible': [('mode', '=', 'Stripe')]}"/>
                    <field name="mode" invisible="1"/>
<!--                    <field name="date"/>-->
                </xpath>

            </field>
        </record>
    </data>
    <data noupdate="1">
    <record id="payment_acquirer_wallet_transfer" model="payment.acquirer">
        <field name="name">Meta Mask</field>
        <field name="sequence">2</field>
        <field name="view_template_id" ref="payment.default_acquirer_button"/>
        <field name="image_128" type="base64" file="payment_transfer/static/src/img/transfer_icon.png"/>
        <field name="module_id" ref="base.module_payment_transfer"/>
        <field name="pending_msg">&lt;i&gt;Pending&lt;/i&gt;... The order will be validated after the payment.</field>
        <field name="description" type="html">
            <p>
                Provide instructions to customers so that they can pay their orders by Meta Mask.
            </p>
        </field>
    </record>
    </data>

</odoo>
