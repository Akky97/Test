<odoo>
    <data>
        <record id="transfer_form_inherit_view" model="ir.ui.view">
            <field name="model">payment.transaction</field>
            <field name="inherit_id" ref="payment.transaction_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='acquirer_id']" position="after">
                    <field name="payment_intent"/>
<!--                    <field name="date"/>-->
                </xpath>

            </field>
        </record>

        <record id="sale_order_pando_form_inherit_view" model="ir.ui.view">
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale_stock.view_order_form_inherit_sale_stock"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date_order']" position="after">
                    <field name="shipping_Details"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
