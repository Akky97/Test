<?xml version="1.0" encoding="utf-8"?>
<odoo>
   <data>
        <record id="view_users_form_inherit" model="ir.ui.view">
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page" position="inside">
                    <field name="token_ids">
                        <tree create="false">
                            <field name="token"/>
                        </tree>
                    </field>
                </xpath>

                <xpath expr="//notebook" position="inside">
                    <page name="OtherInfo" string="Other Informations">
                        <group >
                            <field name="user_type"/>
                        </group>
                        <group string="Bank Details" attrs="{'invisible': [('user_type', '=', 'customer')]}">
                            <field name="gst_number"/>
                            <field name="account_name"/>
                            <field name="account_number"/>
                            <field name="ifsc_code"/>
                        </group>
                        <group string="Supplier Details" attrs="{'invisible': [('user_type', '=', 'customer')]}">
                            <field name="owner_name"/>
                            <field name="business_name"/>
                            <field name="supplier_phone"/>
                            <field name="supplier_country_id"/>
                            <field name="supplier_state_id" domain="[('country_id','=',supplier_country_id)]"/>
                            <field name="supplier_city"/>
                            <field name="supplier_address"/>
                        </group>
                        <group string="Pickup Details" attrs="{'invisible': [('user_type', '=', 'customer')]}">
                            <field name="pickup_address_line" widget="section_and_note_one2many"
                                   mode="tree,kanban">
                                <tree string="Sales Order Lines" editable="bottom">
                                    <field name="country_id"/>
                                    <field name="state_id" domain="[('country_id','=',country_id)]"/>
                                    <field name="city"/>
                                    <field name="address"/>
                                    <field name="zip"/>
                                </tree>
                            </field>

                        </group>
                    </page>
                </xpath>
            </field>
        </record>
        <!--Reapproval functionality-->
        <record id="view_partner_form_inherit_pando" model="ir.ui.view">
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="odoo_marketplace.wk_seller_form_view"/>
            <field name="arch" type="xml">
                <field name="state" position="attributes">
                    <attribute name="statusbar_visible">new,pending,approved,denied,reapproval</attribute>
                </field>
                <xpath expr="//button[@name='approve']" position="replace">
                    <button name="approve" string="Approve" type="object" states="pending,reapproval"
                            groups="odoo_marketplace.marketplace_officer_group" class="btn-primary"/>
                </xpath>
            </field>
        </record>

        <record id="view_partner_filter_inherit_pando" model="ir.ui.view">
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="odoo_marketplace.wk_seller_view_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='pending']" position="after">
                    <filter string="Re-Approval" name="reapproval" domain="[('state','=','reapproval')]"/>
                </xpath>
            </field>
        </record>
       <!--Reapproval functionality end-->
    </data>
</odoo>
