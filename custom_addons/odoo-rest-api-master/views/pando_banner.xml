<odoo>
    <record id="pando_banner_form" model="ir.ui.view">
        <field name="name">pando.banner.form</field>
        <field name="model">pando.banner</field>
        <field name="arch" type="xml">
            <form string="banner">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="drop_down" widget="radio"/>
                    </group>
                    <field name="image" widget="image" class="oe_avatar" options="{'preview_image': 'image'}"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="pando_banner" model="ir.actions.act_window">
        <field name="name">Banner View</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pando.banner</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Banner's Are Available
            </p>
        </field>
    </record>
<menuitem id="banner" name="Banner" action="pando_banner"  parent="website.menu_website_global_configuration" groups="base.group_user"/>

</odoo>