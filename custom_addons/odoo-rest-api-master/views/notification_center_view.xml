<odoo>
    <record id="notification_center_form" model="ir.ui.view">
        <field name="name">notification.center.form</field>
        <field name="model">notification.center</field>
        <field name="arch" type="xml">
            <form string="Notification Center">
                 <div class="oe_title pr-0">
                        <h1 class="d-flex flex-row justify-content-between">
                            <field name="title" class="o_task_name text-truncate" placeholder="Title..." default_focus="1"/>
                        </h1>
                    </div>
                 <group>
                    <group>
                        <field name="product_id"/>
                        <field name="approve_by"/>
                        <field name="is_read" widget="radio"/>
                        <field name="vendor_message"/>
                    </group>
                    <group>
                        <field name="seller_id"/>
                        <field name="model"/>
                    </group>
                </group>

            </form>
        </field>
    </record>

    <record id="notification_center_tree" model="ir.ui.view">
        <field name="name">notification.center.tree</field>
        <field name="model">notification.center</field>
        <field name="arch" type="xml">
            <tree string="Notification Center">
                <field name="product_id"/>
                <field name="seller_id"/>
                <field name="model"/>
                <field name="approve_by"/>
            </tree>
        </field>
    </record>

    <record id="notification_center" model="ir.actions.act_window">
        <field name="name">Notification Center View</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">notification.center</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Notifications Are Available
            </p>
        </field>
    </record>
<menuitem id="notification_center_menu" name="Notification Center" action="notification_center"  parent="website.menu_website_global_configuration" groups="base.group_user"/>

</odoo>