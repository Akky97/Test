<odoo>
    <record id="pando_images_form" model="ir.ui.view">
        <field name="name">pando.images.form</field>
        <field name="model">pando.images</field>
        <field name="arch" type="xml">
            <form string="images">
                    <group>
                        <field name="product_id" />
                        <field name="type" widget="radio"/>
                        <field name="img_attach" />
                        <field name="image_name" />
                    </group>

            </form>
        </field>
    </record>

    <record id="pando_images_tree" model="ir.ui.view">
        <field name="name">pando.images.tree</field>
        <field name="model">pando.images</field>
        <field name="arch" type="xml">
            <tree string="images">
                <field name="product_id" />
                <field name="type" widget="radio"/>
                <field name="image_name"/>
            </tree>
        </field>
    </record>

    <record id="pando_img" model="ir.actions.act_window">
        <field name="name">Pando Image View</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pando.images</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Images Are Available
            </p>
        </field>
    </record>
<menuitem id="pando_images" name="Pando Images" action="pando_img"  parent="website.menu_website_global_configuration" groups="base.group_user"/>

</odoo>
