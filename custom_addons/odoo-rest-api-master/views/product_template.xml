<odoo>
    <data>
        <record id="product_template_inherit" model="ir.ui.view">
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='barcode']" position="after">
                    <field name="country_id"/>
                </xpath>
                <xpath expr="//field[@name='image_1920']" position="replace">
                    <field name="img_attach" />
                </xpath>
                <xpath expr="//page[@name='variants']" position="after">
                <page name="addition_info" string="Additional Information">
                    <field name="additional_info"/>
                </page>
                <page name="shipping_returns" string="Shipping Returns">
                    <field name="shipping_return"/>
                </page>
            </xpath>
            </field>
        </record>
        <record id="product_template_kanban_view_inherit" model="ir.ui.view">
            <field name="model">product.template</field>
            <field name="inherit_id" ref="odoo_marketplace.wk_seller_product_template_kanban_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='color']" position="after">
                    <field name="img_attach" />
                </xpath>
                <xpath expr="//div[@class='o_kanban_image']" position="replace">
                    <div class="o_kanban_image">
                        <a type="open">
                            <t t-raw="record.img_attach.raw_value"/>
                        </a>
                    </div>
                </xpath>
            </field>
        </record>
        <record id="product_product_kanban_view_inherit" model="ir.ui.view">
            <field name="model">product.product</field>
            <field name="inherit_id" ref="odoo_marketplace.mp_product_product_kanban_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='marketplace_seller_id']" position="after">
                    <field name="img_attach" />
                </xpath>
                <xpath expr="//div[@class='o_kanban_image']" position="replace">
                    <div class="o_kanban_image">
                        <t t-raw="record.img_attach.raw_value"/>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="product_template_inherit_seller_inherit" model="ir.ui.view">
            <field name="model">product.template</field>
            <field name="inherit_id" ref="odoo_marketplace.wk_seller_product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='hs_code']" position="after">
                    <field name="country_id"/>
                </xpath>
                <xpath expr="//field[@name='image_1920']" position="replace">
                    <field name="img_attach" />
                </xpath>
                <xpath expr="//field[@name='product_template_image_ids']" position="replace">
                    <field name="img_multi_attach" />
                </xpath>
<!--                <xpath expr="//page[@name='shop']" position="after">-->
<!--                    <page name="addition_info" string="Additional Information">-->
<!--                        <field name="additional_info" widget="html"/>-->
<!--                    </page>-->
<!--                    <page name="shipping_returns" string="Shipping Returns">-->
<!--                        <field name="shipping_return" widget="html"/>-->
<!--                    </page>-->
<!--                </xpath>-->
            </field>
        </record>
        <record id="mp_product_product_form_view_inherit" model="ir.ui.view">
            <field name="model">product.product</field>
            <field name="inherit_id" ref="odoo_marketplace.mp_product_product_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='hs_code']" position="before">
                    <field name="country_id"/>
                </xpath>
                <xpath expr="//field[@name='image_1920']" position="replace">
                    <field name="img_attach" />
                </xpath>
                <xpath expr="//field[@name='product_template_image_ids']" position="replace">
                    <field name="img_multi_attach" />
                </xpath>
<!--                <xpath expr="//page[@name='shop']" position="after">-->
<!--                    <page name="addition_info" string="Additional Information">-->
<!--                        <field name="additional_info" widget="html"/>-->
<!--                    </page>-->
<!--                    <page name="shipping_returns" string="Shipping Returns">-->
<!--                        <field name="shipping_return" widget="html"/>-->
<!--                    </page>-->
<!--                </xpath>-->
            </field>
        </record>
    </data>
</odoo>
