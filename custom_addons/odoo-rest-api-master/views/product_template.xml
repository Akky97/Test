<odoo>
    <data>
        <record id="product_template_inherit" model="ir.ui.view">
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='barcode']" position="after">
                    <field name="country_id"/>
                </xpath>
                <xpath expr="//page[@name='variants']" position="after">
                <page name="addition_info" string="Additional Information">
                    <field name="additional_info" widget="html"/>
                </page>
                <page name="shipping_returns" string="Shipping Returns">
                    <field name="shipping_return" widget="html"/>
                </page>
            </xpath>
            </field>
        </record>
    </data>
</odoo>
